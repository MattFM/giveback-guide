---
import MainLayout from "../layouts/MainLayout.astro";
import { SITE_TITLE } from "../consts";
import { impactAreaData } from "../utils/impactAreas";

// Show 9 featured impact areas for the why page
const featuredImpactAreas = [
  "Animal Welfare", "Wildlife Rehabilitation", "Sustainable Food Systems",
  "Women's Empowerment", "LGBTQ+ Inclusion", "Disability Inclusion and Empowerment",
  "Cultural Heritage Preservation", "Education and Skills Training", "Community Development"
];
---

<MainLayout 
  title={`Why Choose Better - ${SITE_TITLE}`}
  description="Discover cafes, tours, stays, and experiences where your money directly supports local communities - the same things you'd do anyway, just better choices."
>
  <main>
    <!-- Hero Section - Full Bleed -->
    <section class="relative h-screen flex items-center justify-center overflow-hidden">
      <!-- Hero background image -->
      <div class="absolute inset-0 bg-cover bg-center bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1759238289/beach-clean-hero-1_lcfxtg.jpg')]">
        <div class="absolute inset-0 bg-black opacity-40"></div>
      </div>
      
      <div class="relative z-10 text-center text-white max-w-4xl px-6">
        <h1 class="text-5xl md:text-7xl font-black tracking-tight leading-tight mb-8">
          Your Travel Choices Can <span class="bg-white text-black px-2 py-1">Change Everything</span>
        </h1>
        <p class="text-xl md:text-2xl font-light mb-12 leading-relaxed">
          Discover cafes, tours, stays, and experiences where your money directly supports local communities — the same things you'd do anyway, just better choices
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center max-w-2xl mx-auto">
          <div class="relative flex-1 w-full">
            <input
              type="text"
              placeholder="Where are you traveling to?"
              class="w-full py-4 px-6 text-lg text-gray-900 border-0 rounded-full bg-white focus:ring-4 focus:ring-white/30 outline-none"
            />
            <button class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-600 hover:text-black">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>
          </div>
          <a
            href="/projects"
            class="px-8 py-4 text-lg font-semibold text-black bg-white rounded-full hover:bg-gray-100 transition-all duration-300 whitespace-nowrap"
          >
            Browse All Projects
          </a>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white animate-bounce">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- Same Things, Better Choices Section -->
    <section class="relative">
      <!-- Split layout with image -->
      <div class="grid lg:grid-cols-2 min-h-screen">
        <!-- Content -->
        <div class="flex items-center justify-center p-8 lg:p-16 bg-white">
          <div class="max-w-lg">
            <h2 class="text-4xl lg:text-5xl font-black text-gray-900 mb-8 leading-tight">
              Same Things,<br><span class="bg-black text-white px-2 py-1">Better Choices</span>
            </h2>
            <p class="text-xl text-gray-600 mb-12 leading-relaxed">
              You're already going to eat, sleep, shop, and explore. Why not make choices that support local communities?
            </p>
            
            <div class="space-y-8">
              <div class="flex items-start space-x-4">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <div>
                  <h3 class="text-xl font-bold text-gray-900 mb-2">Instead of any cafe</h3>
                  <p class="text-gray-600">Visit <strong>ZiZo in Utrecht</strong> where people with disabilities develop their talents through cooking and hospitality</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <div>
                  <h3 class="text-xl font-bold text-gray-900 mb-2">Instead of any hotel</h3>
                  <p class="text-gray-600">Stay at <strong>Kindred Spirit Elephant Sanctuary in Thailand</strong> and see rescued elephants living freely</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <div>
                  <h3 class="text-xl font-bold text-gray-900 mb-2">Instead of generic souvenirs</h3>
                  <p class="text-gray-600">Buy from <strong>Her Works in Laos</strong> — unique handcrafts made by ethnic minority women</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <div>
                  <h3 class="text-xl font-bold text-gray-900 mb-2">Instead of chain restaurants</h3>
                  <p class="text-gray-600">Eat at <strong>Furahaa in Paris</strong> — plant-based fast food that employs deaf people</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Image -->
        <div class="relative bg-cover bg-center min-h-96 lg:min-h-screen bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1747744970/women-couple-mobile_thdfvb.jpg')]">
        </div>
      </div>
    </section>

    <!-- Impact Areas Section - Full Width -->
    <section class="bg-black text-white">
      <div class="px-8 py-20 lg:py-32">
        <div class="max-w-6xl mx-auto text-center mb-16">
          <h2 class="text-4xl lg:text-6xl font-black mb-8 leading-tight">
            Every Choice Creates <span class="bg-white text-black px-2 py-1">Real Impact</span>
          </h2>
          <p class="text-xl lg:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Our projects support 15 key impact areas — from animal welfare to women's empowerment to cultural preservation
          </p>
        </div>

        <!-- Impact Areas Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 max-w-7xl mx-auto">
          {featuredImpactAreas.map((areaName) => {
            const data = impactAreaData[areaName];
            return (
              <div class="border border-gray-700 p-6 hover:border-white transition-colors duration-300">
                <div class="flex items-center mb-3">
                  <div class={`text-2xl font-black text-white mr-3 flex-shrink-0`}>{data?.code || "???"}</div>
                  <h3 class="text-lg font-bold">{areaName}</h3>
                </div>
                <p class="text-gray-400 text-sm">{data?.description || "Impact area description not available"}</p>
              </div>
            );
          })}
        </div>

        <div class="text-center mt-12">
          <p class="text-gray-400 mb-6">Plus 10 more impact areas covering marine protection, waste reduction, and poverty alleviation</p>
          <a href="/about/impacts" class="inline-flex items-center text-white hover:text-gray-300 font-semibold text-lg">
            See all impact areas
            <svg class="ml-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Categories with Images Section -->
    <section class="bg-white">
      <div class="pt-20 lg:pt-32">
        <div class="max-w-4xl mx-auto text-center mb-16 px-8">
          <h2 class="text-4xl lg:text-6xl font-black text-gray-900 mb-8 leading-tight">
            Discover What's <span class="bg-black text-white px-2 py-1">Possible</span>
          </h2>
          <p class="text-xl lg:text-2xl text-gray-600 leading-relaxed">
            318+ projects across 60+ countries — from quick visits to immersive experiences
          </p>
        </div>
        
        <!-- Grid with alternating layout -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
          <!-- Cafes & Restaurants -->
          <div class="relative bg-cover bg-center min-h-96 lg:min-h-[50vh] bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1745577056/lille-language-cafe-1024x683.jpg_vwlbxl.webp')]">
          </div>
          <div class="bg-white p-8 lg:p-16 flex items-center">
            <div>
              <h3 class="text-3xl lg:text-4xl font-black text-gray-900 mb-6">Cafes & Restaurants</h3>
              <p class="text-lg text-gray-600 mb-8 leading-relaxed">
                Community-focused dining where your meal makes a difference
              </p>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start">
                  <div class="w-1 h-1 bg-black rounded-full mt-3 mr-3 flex-shrink-0"></div>
                  <span>Disability employment and training programs</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 bg-black rounded-full mt-3 mr-3 flex-shrink-0"></div>
                  <span>Migrant and refugee-run establishments</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 bg-black rounded-full mt-3 mr-3 flex-shrink-0"></div>
                  <span>Social enterprises with transparent impact</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Accommodation (reversed order for desktop) -->
          <div class="bg-white p-8 lg:p-16 flex items-center order-2 lg:order-2">
            <div>
              <h3 class="text-3xl lg:text-4xl font-black text-gray-900 mb-6">Conscious Accommodation</h3>
              <p class="text-lg text-gray-600 mb-8 leading-relaxed">
                Places to stay that support conservation and communities
              </p>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start">
                  <div class="w-1 h-1 bg-black rounded-full mt-3 mr-3 flex-shrink-0"></div>
                  <span>Elephant and animal sanctuaries</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 bg-black rounded-full mt-3 mr-3 flex-shrink-0"></div>
                  <span>Cultural homestays with local families</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 bg-black rounded-full mt-3 mr-3 flex-shrink-0"></div>
                  <span>Eco-lodges supporting conservation</span>
                </li>
              </ul>
            </div>
          </div>
          <div class="relative bg-cover bg-center min-h-96 lg:min-h-[50vh] order-1 lg:order-1 bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1751459760/tacugama-chimpanzee-sanctuary-1_tdp14h.jpg')]">
          </div>

          <!-- Cultural Experiences -->
          <div class="relative bg-cover bg-center min-h-96 lg:min-h-[50vh] bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1747750232/amazon-rainforest-woman_agzrrx.jpg')]">
          </div>
          <div class="bg-white p-8 lg:p-16 flex items-center">
            <div>
              <h3 class="text-3xl lg:text-4xl font-black text-gray-900 mb-6">Cultural Experiences</h3>
              <p class="text-lg text-gray-600 mb-8 leading-relaxed">
                Authentic encounters led by local communities
              </p>
              <ul class="space-y-3 text-gray-600">
                <li class="flex items-start">
                  <div class="w-1 h-1 bg-black rounded-full mt-3 mr-3 flex-shrink-0"></div>
                  <span>Women-led cultural tours and workshops</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 bg-black rounded-full mt-3 mr-3 flex-shrink-0"></div>
                  <span>Traditional craft experiences with artisans</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 bg-black rounded-full mt-3 mr-3 flex-shrink-0"></div>
                  <span>Community-led storytelling and exchanges</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works - Bold Visual -->
    <section class="bg-black text-white">
      <div class="py-20 lg:py-32 px-8">
        <div class="max-w-6xl mx-auto text-center mb-20">
          <h2 class="text-4xl lg:text-6xl font-black mb-8 leading-tight">
            It's Actually <span class="bg-white text-black px-2 py-1">Really Simple</span>
          </h2>
          <p class="text-xl lg:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Simple process, clear instructions — just conscious choosing
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 max-w-6xl mx-auto">
          <div class="text-center">
            <div class="text-6xl font-black text-white mb-6 opacity-20">01</div>
            <h3 class="text-xl font-bold mb-4">Going Somewhere?</h3>
            <p class="text-gray-400 leading-relaxed">Search your destination to see what conscious choices are available</p>
          </div>
          
          <div class="text-center">
            <div class="text-6xl font-black text-white mb-6 opacity-20">02</div>
            <h3 class="text-xl font-bold mb-4">Pick What Appeals</h3>
            <p class="text-gray-400 leading-relaxed">Browse cafes, stays, tours, shops — whatever matches your travel style</p>
          </div>
          
          <div class="text-center">
            <div class="text-6xl font-black text-white mb-6 opacity-20">03</div>
            <h3 class="text-xl font-bold mb-4">Engage With The Project</h3>
            <p class="text-gray-400 leading-relaxed">Book if required, or simply visit — each project has clear instructions on how to get involved</p>
          </div>
          
          <div class="text-center">
            <div class="text-6xl font-black text-white mb-6 opacity-20">04</div>
            <h3 class="text-xl font-bold mb-4">Know Your Impact</h3>
            <p class="text-gray-400 leading-relaxed">Your choices directly support real community projects and social causes</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Founder Story with Full Bleed Image -->
    <section class="relative">
      <div class="grid lg:grid-cols-2 min-h-screen">
        <!-- Image -->
        <div class="relative bg-cover bg-center min-h-96 lg:min-h-screen order-2 lg:order-1 bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1744197180/matt-jade-singapore-cloud-forest_wc25cv.jpg')]">
        </div>
        
        <!-- Content -->
        <div class="flex items-center justify-center p-8 lg:p-16 bg-white order-1 lg:order-2">
          <div class="max-w-lg">
            <h2 class="text-4xl lg:text-5xl font-black text-gray-900 mb-8 leading-tight">
              How This <span class="bg-black text-white px-2 py-1">Started</span>
            </h2>
            <div class="bg-gray-50 border-l-4 border-black p-6">
              <p class="text-lg text-gray-600 italic leading-relaxed">
                [Founder story placeholder - space for your personal journey and the "aha moment" that led to creating Giveback Guide. This will be your authentic voice about discovering that travel could be more meaningful.]
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA - Bold and Direct -->
    <section class="bg-black text-white relative overflow-hidden">
      <div class="py-20 lg:py-32 px-8 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-5xl lg:text-7xl font-black mb-8 leading-tight">
            Ready to Travel <span class="bg-white text-black px-2 py-1">Differently?</span>
          </h2>
          <p class="text-xl lg:text-2xl text-gray-300 mb-12 leading-relaxed">
            Start making choices that matter — same activities, bigger impact
          </p>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center max-w-2xl mx-auto mb-8">
            <div class="relative flex-1 w-full">
              <input
                type="text"
                placeholder="Search by destination..."
                class="w-full py-4 px-6 text-lg text-gray-900 border-0 rounded-full bg-white focus:ring-4 focus:ring-white/30 outline-none"
              />
              <button class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-600 hover:text-black">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </button>
            </div>
            <a
              href="/projects"
              class="px-8 py-4 text-lg font-semibold text-black bg-white rounded-full hover:bg-gray-100 transition-all duration-300 whitespace-nowrap"
            >
              Browse All Categories
            </a>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center text-gray-400">
            <a
              href="/stays"
              class="inline-flex items-center hover:text-white font-medium transition-colors"
            >
              Explore conscious accommodation
              <svg class="ml-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </a>
            <span class="text-gray-600">or</span>
            <a
              href="/about"
              class="inline-flex items-center hover:text-white font-medium transition-colors"
            >
              Learn more about us
              <svg class="ml-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Subtle background pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent"></div>
      </div>
    </section>
  </main>
</MainLayout>