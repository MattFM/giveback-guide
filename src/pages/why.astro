---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/sections/Hero.astro";
import { SITE_TITLE } from "../consts";
import { impactAreaData } from "../utils/impactAreas";

// Show 9 featured impact areas for the why page
const featuredImpactAreas = [
  "Animal Welfare", "Wildlife Rehabilitation", "Sustainable Food Systems",
  "Women's Empowerment", "LGBTQ+ Inclusion", "Disability Inclusion and Empowerment",
  "Cultural Heritage Preservation", "Education and Skills Training", "Community Development"
];
---

<MainLayout 
  title={`Why Choose Better - ${SITE_TITLE}`}
  description="Discover cafes, tours, stays, and experiences where your money directly supports local communities - the same things you'd do anyway, just better choices."
  headerVariant="transparent"
  headerTheme="dark"
>
  <main>
    <!-- Hero Section -->
    <Hero
      background="image"
      backgroundValue="https://res.cloudinary.com/dnxl7wsnx/image/upload/v1759238289/beach-clean-hero-1_lcfxtg.jpg"
      theme="dark"
      size="large"
      align="left"
    >
      <span slot="title">
        Your Travel Choices Can <span class="gradient-highlight-hero">Change Everything</span>
      </span>
      
      <p class="text-xl md:text-2xl font-light leading-relaxed max-w-3xl" style="color: #E8EAE8;">
        Discover cafes, tours, stays, and experiences where your time and money directly supports local communities. The same things you'd do anyway, just better choices
      </p>
    </Hero>

    <!-- Same Things, Better Choices Section -->
    <section class="relative">
      <!-- Split layout with image -->
      <div class="grid lg:grid-cols-2 min-h-screen">
        <!-- Content -->
        <div class="flex items-center justify-center p-8 lg:p-16 bg-white">
          <div class="max-w-lg">
            <h2 class="text-4xl lg:text-5xl font-black mb-8 leading-tight" style="color: #1C2434;">
              Same Things,<br><span class="gradient-highlight">Better Choices</span>
            </h2>
            <p class="text-xl mb-12 leading-relaxed" style="color: #7E827E;">
              We all eat, sleep, shop, and explore when we travel. We just help you to make better choices that create real impact.
            </p>
            
            <div class="space-y-8">
              <div class="flex items-start space-x-4">
                <div class="w-2 h-2 rounded-full mt-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                <div>
                  <h3 class="text-xl font-bold mb-2" style="color: #1C2434;">Instead of any cafe</h3>
                  <p style="color: #7E827E;">Visit <strong style="color: #1C2434;">ZiZo in the Netherlands</strong> where people with disabilities develop their talents through cooking and hospitality</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-2 h-2 rounded-full mt-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                <div>
                  <h3 class="text-xl font-bold mb-2" style="color: #1C2434;">Instead of any hotel</h3>
                  <p style="color: #7E827E;">Stay at <strong style="color: #1C2434;">Kindred Spirit Elephant Sanctuary in Thailand</strong> and see rescued elephants living freely</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-2 h-2 rounded-full mt-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                <div>
                  <h3 class="text-xl font-bold mb-2" style="color: #1C2434;">Instead of generic souvenirs</h3>
                  <p style="color: #7E827E;">Buy from <strong style="color: #1C2434;">Trama Textiles in Xela</strong> and directly support Mayan women in Guatemala</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-2 h-2 rounded-full mt-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                <div>
                  <h3 class="text-xl font-bold mb-2" style="color: #1C2434;">Instead of a regular city tour</h3>
                  <p style="color: #7E827E;">Take a bike tour with <strong style="color: #1C2434;">Pikala Bikes in Marrakesh</strong> and help to empower young Moroccans</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Image -->
        <div class="relative bg-cover bg-center min-h-96 lg:min-h-screen bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1747744970/women-couple-mobile_thdfvb.jpg')]">
        </div>
      </div>
    </section>

    <!-- Impact Areas Section - Full Width -->
    <section class="text-white" style="background-color: #1C2434;">
      <div class="px-8 py-20 lg:py-32">
        <div class="max-w-6xl mx-auto text-center mb-16">
          <h2 class="text-4xl lg:text-6xl font-black mb-8 leading-tight">
            Every Choice Creates <span class="gradient-highlight">Real Impact</span>
          </h2>
          <p class="text-xl lg:text-2xl max-w-3xl mx-auto leading-relaxed" style="color: #D1D4D1;">
            Our projects and stays support 19 key impact areas, to help you find what matters most to you
          </p>
        </div>

        <!-- Impact Areas Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 max-w-7xl mx-auto">
          {featuredImpactAreas.map((areaName) => {
            const data = impactAreaData[areaName];
            return (
              <div class="p-6 hover:border-opacity-100 transition-all duration-300 hover:-translate-y-1" style="border: 1px solid rgba(169, 143, 250, 0.3);">
                <div class="flex items-center mb-3">
                  <div class="text-2xl font-black text-white mr-3 flex-shrink-0">{data?.code || "???"}</div>
                  <h3 class="text-lg font-bold">{areaName}</h3>
                </div>
                <p class="text-sm" style="color: #A8ACA8;">{data?.description || "Impact area description not available"}</p>
              </div>
            );
          })}
        </div>

        <div class="text-center mt-12">
          <p class="mb-6" style="color: #A8ACA8;">Plus 10 more impact areas covering marine protection, waste reduction, and poverty alleviation</p>
          <a href="/about/impacts" class="inline-flex items-center text-white hover:gap-3 font-semibold text-lg transition-all duration-300 gap-2">
            See all impact areas
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Categories with Images Section -->
    <section class="bg-white">
      <div class="pt-20 lg:pt-32">
        <div class="max-w-4xl mx-auto text-center mb-16 px-8">
          <h2 class="text-4xl lg:text-6xl font-black mb-8 leading-tight" style="color: #1C2434;">
            Discover What's <span class="gradient-highlight">Possible</span>
          </h2>
          <p class="text-xl lg:text-2xl leading-relaxed" style="color: #7E827E;">
            300+ projects across 60+ countries. Everything from quick visits to immersive experiences
          </p>
        </div>
        
        <!-- Grid with alternating layout -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
          <!-- Cafes & Restaurants -->
          <div class="relative bg-cover bg-center min-h-96 lg:min-h-[50vh] bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1745577056/lille-language-cafe-1024x683.jpg_vwlbxl.webp')]">
          </div>
          <div class="bg-white p-8 lg:p-16 flex items-center">
            <div>
              <h3 class="text-3xl lg:text-4xl font-black mb-6" style="color: #1C2434;">Cafes & Restaurants</h3>
              <p class="text-lg mb-8 leading-relaxed" style="color: #7E827E;">
                Community-focused dining where your meal makes a difference
              </p>
              <ul class="space-y-3" style="color: #7E827E;">
                <li class="flex items-start">
                  <div class="w-1 h-1 rounded-full mt-3 mr-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                  <span>Disability employment and training programs</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 rounded-full mt-3 mr-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                  <span>Migrant and refugee-run establishments</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 rounded-full mt-3 mr-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                  <span>Social enterprises with transparent impact</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Accommodation (reversed order for desktop) -->
          <div class="bg-white p-8 lg:p-16 flex items-center order-2 lg:order-2">
            <div>
              <h3 class="text-3xl lg:text-4xl font-black mb-6" style="color: #1C2434;">Conscious Accommodation</h3>
              <p class="text-lg mb-8 leading-relaxed" style="color: #7E827E;">
                Places to stay that support conservation and communities
              </p>
              <ul class="space-y-3" style="color: #7E827E;">
                <li class="flex items-start">
                  <div class="w-1 h-1 rounded-full mt-3 mr-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                  <span>Elephant and animal sanctuaries</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 rounded-full mt-3 mr-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                  <span>Cultural homestays with local families</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 rounded-full mt-3 mr-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                  <span>Eco-lodges supporting conservation</span>
                </li>
              </ul>
            </div>
          </div>
          <div class="relative bg-cover bg-center min-h-96 lg:min-h-[50vh] order-1 lg:order-1 bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1751459760/tacugama-chimpanzee-sanctuary-1_tdp14h.jpg')]">
          </div>

          <!-- Cultural Experiences -->
          <div class="relative bg-cover bg-center min-h-96 lg:min-h-[50vh] bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1747750232/amazon-rainforest-woman_agzrrx.jpg')]">
          </div>
          <div class="bg-white p-8 lg:p-16 flex items-center">
            <div>
              <h3 class="text-3xl lg:text-4xl font-black mb-6" style="color: #1C2434;">Cultural Experiences</h3>
              <p class="text-lg mb-8 leading-relaxed" style="color: #7E827E;">
                Authentic encounters led by local communities
              </p>
              <ul class="space-y-3" style="color: #7E827E;">
                <li class="flex items-start">
                  <div class="w-1 h-1 rounded-full mt-3 mr-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                  <span>Women-led cultural tours and workshops</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 rounded-full mt-3 mr-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                  <span>Traditional craft experiences with artisans</span>
                </li>
                <li class="flex items-start">
                  <div class="w-1 h-1 rounded-full mt-3 mr-3 flex-shrink-0" style="background-color: #A98FFA;"></div>
                  <span>Community-led storytelling and exchanges</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works - Bold Visual -->
    <section class="text-white" style="background-color: #1C2434;">
      <div class="py-20 lg:py-32 px-8">
        <div class="max-w-6xl mx-auto text-center mb-20">
          <h2 class="text-4xl lg:text-6xl font-black mb-8 leading-tight">
            It's Actually <span class="gradient-highlight">Really Simple</span>
          </h2>
          <p class="text-xl lg:text-2xl max-w-3xl mx-auto leading-relaxed" style="color: #D1D4D1;">
            Just browse the database, choose what appeals to you and get involved
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 max-w-6xl mx-auto">
          <div class="text-center">
            <div class="text-6xl font-black text-white mb-6 opacity-20">01</div>
            <h3 class="text-xl font-bold mb-4">Going Somewhere?</h3>
            <p class="leading-relaxed" style="color: #A8ACA8;">Search by your destination to see what conscious choices are available</p>
          </div>
          
          <div class="text-center">
            <div class="text-6xl font-black text-white mb-6 opacity-20">02</div>
            <h3 class="text-xl font-bold mb-4">Pick What Appeals</h3>
            <p class="leading-relaxed" style="color: #A8ACA8;">Browse cafes, stays, tours, shops in our database</p>
          </div>
          
          <div class="text-center">
            <div class="text-6xl font-black text-white mb-6 opacity-20">03</div>
            <h3 class="text-xl font-bold mb-4">Engage With The Project</h3>
            <p class="leading-relaxed" style="color: #A8ACA8;">Book if required, or simply visit. Each project has clear instructions on how to get involved</p>
          </div>
          
          <div class="text-center">
            <div class="text-6xl font-black text-white mb-6 opacity-20">04</div>
            <h3 class="text-xl font-bold mb-4">Know Your Impact</h3>
            <p class="leading-relaxed" style="color: #A8ACA8;">Your choices directly support real community projects, social causes and ecosystems</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Founder Story with Full Bleed Image -->
    <section class="relative">
      <div class="grid lg:grid-cols-2 min-h-screen">
        <!-- Image -->
        <div class="relative bg-cover bg-center min-h-96 lg:min-h-screen order-2 lg:order-1 bg-[url('https://res.cloudinary.com/dnxl7wsnx/image/upload/v1744197180/matt-jade-singapore-cloud-forest_wc25cv.jpg')]">
        </div>
        
        <!-- Content -->
        <div class="flex items-center justify-center p-8 lg:p-16 bg-white order-1 lg:order-2">
          <div class="max-w-lg">
            <h2 class="text-4xl lg:text-5xl font-black mb-8 leading-tight" style="color: #1C2434;">
              How This <span class="gradient-highlight">Started</span>
            </h2>
            <div class="p-6" style="background-color: #F6F7F6; border-left: 4px solid #A98FFA;">
              <p class="text-lg italic leading-relaxed mb-4" style="color: #7E827E;">
                We created Giveback Guide when we began to realise that we wanted more from our travels. We sought out experiences that aligned with our values, but found it hard to discover them. When we started engaging in positive impact projects, we saw the potential for travel to be a force for good. So, we decided to create a platform that would make it easier for others to find and engage with these kinds of experiences.</p>
              <p class="text-lg italic leading-relaxed" style="color: #7E827E;">We hope that Giveback Guide helps you to find and engage with meaningful travel experiences that align with your values, which in turn will enhance your travels.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA - Bold and Direct -->
    <section class="text-white relative overflow-hidden" style="background-color: #1C2434;">
      <div class="py-20 lg:py-32 px-8 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-5xl lg:text-7xl font-black mb-8 leading-tight">
            Ready to Travel <span class="gradient-highlight">Differently?</span>
          </h2>
          <p class="text-xl lg:text-2xl mb-12 leading-relaxed" style="color: #D1D4D1;">
            Start making choices that matter — same activities, bigger impact
          </p>
          
          <form action="/search" method="get" class="max-w-2xl mx-auto mb-8">
            <div class="relative w-full">
              <input
                type="text"
                name="q"
                placeholder="Search by destination..."
                class="w-full py-4 px-6 text-lg border-0 rounded-full bg-white focus:ring-4 outline-none"
                style="color: #1C2434; --tw-ring-color: rgba(169, 143, 250, 0.3);"
                required
              />
              <button type="submit" class="absolute right-4 top-1/2 transform -translate-y-1/2 hover:text-black transition-colors" style="color: #7E827E;">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </button>
            </div>
          </form>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-8" style="color: #A8ACA8;">
            <a
              href="/projects"
              class="inline-flex items-center hover:text-white font-medium transition-all duration-300 gap-2 hover:gap-3"
            >
              Browse all projects
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </a>
            <span style="color: #7E827E;">•</span>
            <a
              href="/stays"
              class="inline-flex items-center hover:text-white font-medium transition-all duration-300 gap-2 hover:gap-3"
            >
              Explore conscious accommodation
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </a>
            <span style="color: #7E827E;">•</span>
            <a
              href="/about"
              class="inline-flex items-center hover:text-white font-medium transition-all duration-300 gap-2 hover:gap-3"
            >
              Learn more about us
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Subtle background pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent"></div>
      </div>
    </section>
  </main>
  
  <style>
    /* Gradient highlight for hero sections only (dark backgrounds) */
    .gradient-highlight-hero {
      background: linear-gradient(
        135deg,
        #DED5FD,
        #C4B3FC,
        #A98FFA,
        #C4B3FC,
        #DED5FD
      );
      background-size: 200% 200%;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: gradientShift 4s ease infinite;
      font-weight: 900;
    }

    /* Solid purple highlight for light backgrounds (better contrast) */
    .gradient-highlight {
      color: #7353D4;
      font-weight: 900;
    }

    @keyframes gradientShift {
      0%, 100% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
    }
  </style>
</MainLayout>