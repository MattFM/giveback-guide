---
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="Request a Feature" headerVariant="transparent" headerTheme="dark">
  <section style="background-color: #1C2434; padding: 6rem 1rem 3rem;">
    <div class="max-w-3xl mx-auto text-center">
      <div class="inline-flex items-center px-3 py-1 rounded-lg text-xs font-bold mb-4" style="background: rgba(115, 83, 212, 0.2); border: 1px solid rgba(115, 83, 212, 0.3); color: white;">
        FEATURE REQUEST
      </div>
      <h1 class="text-4xl font-black text-white mb-4">Shape What We Build</h1>
      <p class="text-lg text-white/90 mb-6">
        Your ideas help us prioritise what to build next. We read every request and look for patterns.
      </p>
      <a 
        href="/feedback/" 
        class="inline-flex items-center text-sm text-white/70 hover:text-white transition-colors"
      >
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to feedback options
      </a>
    </div>
  </section>

  <section style="background-color: #F6F7F6; padding: 3rem 1rem;">
    <div class="max-w-3xl mx-auto">
      
      <!-- Helpful Tips Card -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 mb-6">
        <h2 class="text-lg font-bold mb-3 flex items-center" style="color: #1C2434;">
          <svg class="w-5 h-5 mr-2" style="color: #7353D4;" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
          Great Feature Requests Include
        </h2>
        <ul class="space-y-2 text-sm" style="color: #7E827E;">
          <li class="flex items-start">
            <span class="mr-2">•</span>
            <span><strong>The problem:</strong> What are you trying to accomplish that you can't do now?</span>
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            <span><strong>Your use case:</strong> How would you use this feature? What would it help you do?</span>
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            <span><strong>Examples:</strong> Have you seen something similar elsewhere that works well?</span>
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            <span><strong>Impact:</strong> How much would this improve your experience? Critical? Nice-to-have?</span>
          </li>
        </ul>
      </div>

      <!-- Tally Embed Container -->
      <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden p-6">
        <iframe data-tally-src="https://tally.so/embed/vGXGK4?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1" loading="lazy" width="100%" height="1572" frameborder="0" marginheight="0" marginwidth="0" title="Feedback - Feature Request"></iframe>
      </div>

      <script is:inline>
        var d=document,w="https://tally.so/widgets/embed.js",v=function(){"undefined"!=typeof Tally?Tally.loadEmbeds():d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach((function(e){e.src=e.dataset.tallySrc}))};if("undefined"!=typeof Tally)v();else if(d.querySelector('script[src="'+w+'"]')==null){var s=d.createElement("script");s.src=w,s.onload=v,s.onerror=v,d.body.appendChild(s);}
      </script>


    </div>
  </section>
</MainLayout>
</style>
