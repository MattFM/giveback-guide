---
import MainLayout from "../../../layouts/MainLayout.astro";
import Button from "../../../components/ui/Button.astro";
import Hero from "../../../components/sections/Hero.astro";
---

<MainLayout 
  title="Design System - Giveback Guide"
  description="Standard UI components and design guidelines"
  headerVariant="transparent"
  headerTheme="dark"
>
  <style>
    /* Design System Tokens */
    :root {
      /* === PROPOSED COLOR PALETTE (October 2025) === */
      /* Earthy tones with purple accent for ethical, sustainable travel */
      
      /* Primary: Tropical Indigo (Purple Accent) */
      --color-primary: #A98FFA;
      --color-primary-light: #C4B3FC;
      --color-primary-lighter: #DED5FD;
      --color-primary-dark: #8E6EF7;
      --color-primary-darker: #7353D4;
      
      /* Neutral: Seasalt (Light Gray/Off-White) */
      --color-neutral-50: #FFFFFF;
      --color-neutral-100: #F6F7F6;
      --color-neutral-200: #E8EAE8;
      --color-neutral-300: #D1D4D1;
      --color-neutral-400: #A8ACA8;
      --color-neutral-500: #7E827E;
      
      /* Dark: Raisin Black (Navy) */
      --color-dark: #1C2434;
      --color-dark-light: #2D3749;
      --color-dark-lighter: #424D62;
      --color-dark-darker: #151B27;
      --color-dark-darkest: #0F1419;
      
      /* Nature: Reseda Green (Vibrant Sage) */
      --color-nature: #657D60;
      --color-nature-light: #7F9679;
      --color-nature-lighter: #A3B59E;
      --color-nature-dark: #4F6149;
      --color-nature-darker: #3A4836;
      --color-nature-bg: #E9EFEA;
      
      /* Nature Dark: Forest Green */
      --color-forest: #273524;
      --color-forest-light: #3D4F3A;
      --color-forest-lighter: #556951;
      --color-forest-bg: #E3E6E3;
      
      /* Earth: Bistre (Deep Brown - expanded variants) */
      --color-earth: #251605;
      --color-earth-light: #3D2B12;
      --color-earth-lighter: #5A4525;
      --color-earth-lightest: #78603D;
      --color-earth-bg: #EBE6E0;
      --color-earth-bg-light: #F5F2ED;
      
      /* Legacy/Utility Colors */
      /* Red (Destructive) */
      --color-red-50: #fef2f2;
      --color-red-100: #fee2e2;
      --color-red-600: #dc2626;
      --color-red-700: #b91c1c;
      
      /* Typography Scale */
      --font-size-xs: 0.75rem;
      --font-size-sm: 0.875rem;
      --font-size-base: 1rem;
      --font-size-lg: 1.125rem;
      --font-size-xl: 1.25rem;
      --font-size-2xl: 1.5rem;
      --font-size-3xl: 1.875rem;
      --font-size-4xl: 2.25rem;
      
      /* Spacing Scale */
      --spacing-xs: 0.5rem;
      --spacing-sm: 0.75rem;
      --spacing-md: 1rem;
      --spacing-lg: 1.5rem;
      --spacing-xl: 2rem;
      --spacing-2xl: 3rem;
      --spacing-3xl: 4rem;
      --spacing-4xl: 6rem;
      
      /* Border Radius */
      --border-radius-sm: 0.375rem;
      --border-radius-md: 0.75rem;
      --border-radius-lg: 1rem;
      --border-radius-xl: 1.5rem;
      --border-radius-full: 9999px;
    }

    /* Base Components */
    .btn {
      padding: var(--spacing-sm) var(--spacing-lg);
      border-radius: var(--border-radius-md);
      font-weight: 600;
      transition: all 0.2s ease;
      border: none;
      cursor: pointer;
      font-size: var(--font-size-sm);
    }
    
    .btn-primary {
      background-color: var(--color-primary);
      color: white;
    }
    
    .btn-primary:hover {
      background-color: var(--color-primary-dark);
      transform: translateY(-1px);
    }
    
    .btn-secondary {
      background-color: var(--color-nature);
      color: white;
    }
    
    .btn-secondary:hover {
      background-color: var(--color-nature-dark);
      transform: translateY(-1px);
    }
    
    .btn-outline {
      background-color: transparent;
      color: var(--color-neutral-800);
      border: 1px solid var(--color-neutral-300);
    }
    
    .btn-outline:hover {
      border-color: var(--color-neutral-400);
      background-color: var(--color-neutral-50);
    }
    
    .btn-danger {
      background-color: var(--color-red-600);
      color: white;
    }
    
    .btn-danger:hover {
      background-color: var(--color-red-700);
      transform: translateY(-1px);
    }
    
    .card {
      background: white;
      border-radius: var(--border-radius-lg);
      padding: var(--spacing-xl);
      box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
      transition: all 0.2s ease;
    }
    
    .card:hover {
      box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      transform: translateY(-2px);
    }
    
    .badge {
      padding: var(--spacing-xs) var(--spacing-sm);
      border-radius: var(--border-radius-full);
      font-size: var(--font-size-sm);
      font-weight: 600;
    }
    
    .section-padding {
      padding: var(--spacing-4xl) var(--spacing-lg);
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--spacing-lg);
    }
    
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>

  <main>
    <!-- Hero Header with Integrated Navigation -->
    <Hero 
      title="Design System"
      description="Standard UI components and design guidelines for Giveback Guide."
      background="color"
      backgroundValue="var(--color-dark)"
      theme="dark"
      size="medium"
      align="left"
    >
      <div style="margin-top: var(--spacing-lg);">
        <a href="/DESIGN-GUIDELINES.md" class="btn btn-primary">
          View Complete Guidelines →
        </a>
      </div>
    </Hero>

    <!-- Design Guidelines Overview -->
    <section class="section-padding" style="background: white;">
      <div class="container">
        <h2 style="font-size: var(--font-size-3xl); font-weight: 700; margin-bottom: var(--spacing-md);">Design Guidelines Overview</h2>
        <p style="font-size: var(--font-size-lg); color: var(--color-neutral-600); margin-bottom: var(--spacing-3xl); max-width: 800px;">
          These visual examples demonstrate the standards defined in our comprehensive guidelines document.
        </p>

        <!-- The 60-30-10 Rule -->
        <div style="background: var(--color-neutral-50); padding: var(--spacing-2xl); border-radius: var(--border-radius-lg); border: 2px solid var(--color-neutral-200); margin-bottom: var(--spacing-3xl);">
          <h3 style="font-size: var(--font-size-xl); font-weight: 700; margin-bottom: var(--spacing-lg);">
            The 60-30-10 Color Principle
          </h3>
          <div style="display: grid; grid-template-columns: 6fr 3fr 1fr; gap: var(--spacing-md); margin-bottom: var(--spacing-lg);">
            <div style="background: var(--color-neutral-100); padding: var(--spacing-lg); border-radius: var(--border-radius-md); text-align: center;">
              <div style="font-size: var(--font-size-2xl); font-weight: 700; color: var(--color-neutral-900); margin-bottom: var(--spacing-xs);">60%</div>
              <div style="font-size: var(--font-size-sm); color: var(--color-neutral-600);">Neutrals</div>
            </div>
            <div style="background: white; padding: var(--spacing-lg); border-radius: var(--border-radius-md); text-align: center; border: 1px solid var(--color-neutral-200);">
              <div style="font-size: var(--font-size-2xl); font-weight: 700; color: var(--color-neutral-900); margin-bottom: var(--spacing-xs);">30%</div>
              <div style="font-size: var(--font-size-sm); color: var(--color-neutral-600);">White Space</div>
            </div>
            <div style="background: var(--color-primary-lighter); padding: var(--spacing-lg); border-radius: var(--border-radius-md); text-align: center; border: 1px solid var(--color-primary-light);">
              <div style="font-size: var(--font-size-2xl); font-weight: 700; color: var(--color-primary-darker); margin-bottom: var(--spacing-xs);">10%</div>
              <div style="font-size: var(--font-size-sm); color: var(--color-primary-darker);">Accent</div>
            </div>
          </div>
          <p style="font-size: var(--font-size-sm); color: var(--color-neutral-600); line-height: 1.6;">
            <strong>Rule:</strong> Use neutrals for structure, white space for breathing room, and accent colors sparingly for impact. Never mix multiple accent colors in the same section.
          </p>
        </div>

        <!-- Spacing Scale Visualization -->
        <div style="margin-bottom: var(--spacing-3xl);">
          <h3 style="font-size: var(--font-size-xl); font-weight: 700; margin-bottom: var(--spacing-lg);">
            Spacing Scale (4px Base Unit)
          </h3>
          <div style="display: flex; flex-direction: column; gap: var(--spacing-md); background: white; padding: var(--spacing-xl); border-radius: var(--border-radius-lg); border: 1px solid var(--color-neutral-200);">
            <div style="display: flex; align-items: center; gap: var(--spacing-lg);">
              <div style="width: 120px; font-size: var(--font-size-sm); font-weight: 600; color: var(--color-neutral-700);">xs (4px)</div>
              <div style="height: 24px; background: var(--color-primary); border-radius: 2px; width: var(--spacing-xs);"></div>
              <span style="font-size: var(--font-size-xs); color: var(--color-neutral-500);">Micro gaps, tight spacing</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--spacing-lg);">
              <div style="width: 120px; font-size: var(--font-size-sm); font-weight: 600; color: var(--color-neutral-700);">sm (8px)</div>
              <div style="height: 24px; background: var(--color-primary); border-radius: 2px; width: var(--spacing-sm);"></div>
              <span style="font-size: var(--font-size-xs); color: var(--color-neutral-500);">Small gaps, badge padding</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--spacing-lg);">
              <div style="width: 120px; font-size: var(--font-size-sm); font-weight: 600; color: var(--color-neutral-700);">md (12px)</div>
              <div style="height: 24px; background: var(--color-primary); border-radius: 2px; width: var(--spacing-md);"></div>
              <span style="font-size: var(--font-size-xs); color: var(--color-neutral-500);">Standard gaps between elements</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--spacing-lg);">
              <div style="width: 120px; font-size: var(--font-size-sm); font-weight: 600; color: var(--color-neutral-700);">lg (16px)</div>
              <div style="height: 24px; background: var(--color-nature); border-radius: 2px; width: var(--spacing-lg);"></div>
              <span style="font-size: var(--font-size-xs); color: var(--color-neutral-500);">Card padding, comfortable gaps</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--spacing-lg);">
              <div style="width: 120px; font-size: var(--font-size-sm); font-weight: 600; color: var(--color-neutral-700);">xl (24px)</div>
              <div style="height: 24px; background: var(--color-nature); border-radius: 2px; width: var(--spacing-xl);"></div>
              <span style="font-size: var(--font-size-xs); color: var(--color-neutral-500);">Section internal spacing</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--spacing-lg);">
              <div style="width: 120px; font-size: var(--font-size-sm); font-weight: 600; color: var(--color-neutral-700);">2xl (32px)</div>
              <div style="height: 24px; background: var(--color-nature); border-radius: 2px; width: var(--spacing-2xl);"></div>
              <span style="font-size: var(--font-size-xs); color: var(--color-neutral-500);">Spacious card padding</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--spacing-lg);">
              <div style="width: 120px; font-size: var(--font-size-sm); font-weight: 600; color: var(--color-neutral-700);">3xl (48px)</div>
              <div style="height: 24px; background: var(--color-earth-lighter); border-radius: 2px; width: var(--spacing-3xl);"></div>
              <span style="font-size: var(--font-size-xs); color: var(--color-neutral-500);">Section spacing</span>
            </div>
            <div style="display: flex; align-items: center; gap: var(--spacing-lg);">
              <div style="width: 120px; font-size: var(--font-size-sm); font-weight: 600; color: var(--color-neutral-700);">4xl (64px)</div>
              <div style="height: 24px; background: var(--color-earth-lighter); border-radius: 2px; width: var(--spacing-4xl);"></div>
              <span style="font-size: var(--font-size-xs); color: var(--color-neutral-500);">Large section padding</span>
            </div>
          </div>
        </div>

        <!-- Quick Reference Cards -->
        <div>
          <h3 style="font-size: var(--font-size-xl); font-weight: 700; margin-bottom: var(--spacing-lg);">
            Quick Reference: Common Patterns
          </h3>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: var(--spacing-lg);">
            <div style="background: var(--color-neutral-50); padding: var(--spacing-lg); border-radius: var(--border-radius-md); border: 1px solid var(--color-neutral-200);">
              <h4 style="font-size: var(--font-size-base); font-weight: 700; color: var(--color-neutral-900); margin-bottom: var(--spacing-sm);">Section Padding</h4>
              <code style="font-size: var(--font-size-sm); color: var(--color-primary-darker); background: white; padding: var(--spacing-xs) var(--spacing-sm); border-radius: 4px; display: block; font-family: monospace;">
                padding: var(--spacing-4xl) var(--spacing-lg)
              </code>
            </div>

            <div style="background: var(--color-neutral-50); padding: var(--spacing-lg); border-radius: var(--border-radius-md); border: 1px solid var(--color-neutral-200);">
              <h4 style="font-size: var(--font-size-base); font-weight: 700; color: var(--color-neutral-900); margin-bottom: var(--spacing-sm);">Card Spacing</h4>
              <code style="font-size: var(--font-size-sm); color: var(--color-primary-darker); background: white; padding: var(--spacing-xs) var(--spacing-sm); border-radius: 4px; display: block; font-family: monospace;">
                padding: var(--spacing-xl)
              </code>
            </div>

            <div style="background: var(--color-neutral-50); padding: var(--spacing-lg); border-radius: var(--border-radius-md); border: 1px solid var(--color-neutral-200);">
              <h4 style="font-size: var(--font-size-base); font-weight: 700; color: var(--color-neutral-900); margin-bottom: var(--spacing-sm);">Grid Gaps</h4>
              <code style="font-size: var(--font-size-sm); color: var(--color-primary-darker); background: white; padding: var(--spacing-xs) var(--spacing-sm); border-radius: 4px; display: block; font-family: monospace;">
                gap: var(--spacing-xl)
              </code>
            </div>

            <div style="background: var(--color-neutral-50); padding: var(--spacing-lg); border-radius: var(--border-radius-md); border: 1px solid var(--color-neutral-200);">
              <h4 style="font-size: var(--font-size-base); font-weight: 700; color: var(--color-neutral-900); margin-bottom: var(--spacing-sm);">Transitions</h4>
              <code style="font-size: var(--font-size-sm); color: var(--color-primary-darker); background: white; padding: var(--spacing-xs) var(--spacing-sm); border-radius: 4px; display: block; font-family: monospace;">
                transition: all 0.2s ease
              </code>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Color Palette -->
    <section class="section-padding" style="background: #FFFFFF;">
      <div class="container">
        <h2 style="font-size: var(--font-size-3xl); font-weight: 700; margin-bottom: var(--spacing-md);">
          Proposed Color Palette (October 2025)
        </h2>
        <p style="font-size: var(--font-size-base); color: var(--color-dark); opacity: 0.7; margin-bottom: var(--spacing-3xl); max-width: 800px;">
          An earthy, grounded palette with a progressive purple accent. Designed to convey authenticity, sustainability, and thoughtful purpose in ethical travel.
        </p>

        <!-- Color Philosophy -->
        <div style="background: var(--color-neutral-100); padding: var(--spacing-2xl); border-radius: var(--border-radius-lg); margin-bottom: var(--spacing-3xl); border-left: 4px solid var(--color-primary);">
          <h3 style="font-size: var(--font-size-xl); font-weight: 700; margin-bottom: var(--spacing-md); color: var(--color-dark);">
            Design Philosophy: Sparing Use of Color
          </h3>
          <p style="font-size: var(--font-size-base); color: var(--color-dark); opacity: 0.8; line-height: 1.7; margin-bottom: var(--spacing-md);">
            Modern web design favors restraint. Color should be used <strong>sparingly</strong> as strategic splashes to guide the eye and create emphasis. The majority of the interface relies on neutral backgrounds and dark text, with accent colors appearing only where they add value.
          </p>
          <ul style="font-size: var(--font-size-sm); color: var(--color-dark); opacity: 0.7; line-height: 1.8; padding-left: var(--spacing-xl);">
            <li>Use earthy colors as subtle backgrounds for sections</li>
            <li>Apply purple sparingly for interactive elements and CTAs</li>
            <li>Let photography and content take center stage</li>
            <li>Create visual rhythm through color variation, not saturation</li>
          </ul>
        </div>

        <!-- Main Palette Grid -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: var(--spacing-xl); margin-bottom: var(--spacing-3xl);">
          
          <!-- Tropical Indigo (Purple) -->
          <div style="background: white; padding: var(--spacing-xl); border-radius: var(--border-radius-lg); border: 1px solid var(--color-neutral-200);">
            <div style="margin-bottom: var(--spacing-lg);">
              <div style="background: var(--color-primary); height: 80px; border-radius: var(--border-radius-md); margin-bottom: var(--spacing-sm); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: var(--font-size-xl);">
                #A98FFA
              </div>
              <h3 style="font-size: var(--font-size-lg); font-weight: 700; color: var(--color-dark); margin-bottom: var(--spacing-xs);">Tropical Indigo</h3>
              <p style="font-size: var(--font-size-sm); color: var(--color-dark); opacity: 0.6;">Primary Accent</p>
            </div>
            
            <div style="display: grid; gap: var(--spacing-xs); margin-bottom: var(--spacing-md);">
              <div style="background: var(--color-primary-lighter); padding: var(--spacing-sm); border-radius: 4px; font-size: var(--font-size-xs); color: var(--color-dark);">Lighter: #DED5FD</div>
              <div style="background: var(--color-primary-light); padding: var(--spacing-sm); border-radius: 4px; font-size: var(--font-size-xs); color: var(--color-dark);">Light: #C4B3FC</div>
              <div style="background: var(--color-primary-dark); padding: var(--spacing-sm); border-radius: 4px; font-size: var(--font-size-xs); color: white;">Dark: #8E6EF7</div>
              <div style="background: var(--color-primary-darker); padding: var(--spacing-sm); border-radius: 4px; font-size: var(--font-size-xs); color: white;">Darker: #7353D4</div>
            </div>
            
            <div style="font-size: var(--font-size-xs); color: var(--color-dark); opacity: 0.7; line-height: 1.6;">
              <strong>Usage:</strong> CTAs, links, interactive hover states, accent headings. Use sparingly for maximum impact.
            </div>
            
            <div style="margin-top: var(--spacing-md); padding: var(--spacing-sm); background: var(--color-neutral-100); border-radius: 4px; font-size: var(--font-size-xs); color: var(--color-dark); opacity: 0.6;">
              ⚠️ Accessibility: Use darker variant (#7353D4) for small text on white backgrounds
            </div>
          </div>

          <!-- Raisin Black (Navy) -->
          <div style="background: white; padding: var(--spacing-xl); border-radius: var(--border-radius-lg); border: 1px solid var(--color-neutral-200);">
            <div style="margin-bottom: var(--spacing-lg);">
              <div style="background: var(--color-dark); height: 80px; border-radius: var(--border-radius-md); margin-bottom: var(--spacing-sm); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: var(--font-size-xl);">
                #1C2434
              </div>
              <h3 style="font-size: var(--font-size-lg); font-weight: 700; color: var(--color-dark); margin-bottom: var(--spacing-xs);">Raisin Black</h3>
              <p style="font-size: var(--font-size-sm); color: var(--color-dark); opacity: 0.6;">Primary Dark / Text</p>
            </div>
            
            <div style="display: grid; gap: var(--spacing-xs); margin-bottom: var(--spacing-md);">
              <div style="background: var(--color-dark-lighter); padding: var(--spacing-sm); border-radius: 4px; font-size: var(--font-size-xs); color: white;">Lighter: #424D62</div>
              <div style="background: var(--color-dark-light); padding: var(--spacing-sm); border-radius: 4px; font-size: var(--font-size-xs); color: white;">Light: #2D3749</div>
              <div style="background: var(--color-dark-darker); padding: var(--spacing-sm); border-radius: 4px; font-size: var(--font-size-xs); color: white;">Darker: #151B27</div>
              <div style="background: var(--color-dark-darkest); padding: var(--spacing-sm); border-radius: 4px; font-size: var(--font-size-xs); color: white;">Darkest: #0F1419</div>
            </div>
            
            <div style="font-size: var(--font-size-xs); color: var(--color-dark); opacity: 0.7; line-height: 1.6;">
              <strong>Usage:</strong> Primary text, headings, navigation, footer backgrounds. Conveys trustworthiness and professionalism.
            </div>
            
            <div style="margin-top: var(--spacing-md); padding: var(--spacing-sm); background: var(--color-neutral-100); border-radius: 4px; font-size: var(--font-size-xs); color: var(--color-dark); opacity: 0.6;">
              ✅ Excellent contrast ratio (15:1) on white backgrounds
            </div>
          </div>

          <!-- Seasalt (Neutral) -->
          <div style="background: white; padding: var(--spacing-xl); border-radius: var(--border-radius-lg); border: 1px solid var(--color-neutral-200);">
            <div style="margin-bottom: var(--spacing-lg);">
              <div style="background: var(--color-neutral-100); height: 80px; border-radius: var(--border-radius-md); margin-bottom: var(--spacing-sm); display: flex; align-items: center; justify-content: center; color: var(--color-dark); font-weight: 700; font-size: var(--font-size-xl); border: 1px solid var(--color-neutral-200);">
                #F6F7F6
              </div>
              <h3 style="font-size: var(--font-size-lg); font-weight: 700; color: var(--color-dark); margin-bottom: var(--spacing-xs);">Seasalt</h3>
              <p style="font-size: var(--font-size-sm); color: var(--color-dark); opacity: 0.6;">Neutral Background</p>
            </div>
            
            <div style="display: grid; gap: var(--spacing-xs); margin-bottom: var(--spacing-md);">
