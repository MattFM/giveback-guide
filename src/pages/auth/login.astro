---
import MainLayout from '../../layouts/MainLayout.astro';
---

<MainLayout title="Login">
    <section class="max-w-2xl mx-auto px-4 py-8">
        <h1 class="text-4xl font-extrabold mb-8 text-center">Welcome Back</h1>
        
    <!-- Only magic-link sign-in is enabled. -->

        <!-- Magic URL form -->
        <form id="magicURLForm" class="space-y-6">
            <div>
                <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Your email</label>
                <input type="email" id="email" name="email" required 
                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                    placeholder="name@company.com">
            </div>
            <div>
                <button type="submit" 
                    class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    Send Magic Link
                </button>
            </div>
            <div id="success-message" class="text-sm text-green-600 dark:text-green-500 text-center hidden"></div>
            <div id="error-message" class="text-sm text-red-600 dark:text-red-500 text-center hidden"></div>
        </form>

        <p class="text-sm text-gray-500 dark:text-gray-400 mt-4 text-center">
            By continuing, you agree to our 
            <a href="/terms" class="text-primary-600 hover:underline dark:text-primary-500">Terms of Service</a> and 
            <a href="/privacy" class="text-primary-600 hover:underline dark:text-primary-500">Privacy Policy</a>.
        </p>
    </section>
</MainLayout>

<script>
    import { createMagicURLSession, getCurrentUser } from '../../lib/appwrite';

    // If a user is already signed-in, send them to the dashboard instead of
    // allowing them to request a new magic link.
    (async () => {
        try {
            const user = await getCurrentUser();
            if (user) {
                window.location.href = '/auth/dashboard';
                return;
            }
        } catch (e) {
            // ignore and let the page load
            console.debug('Login page auth check failed', e);
        }
    })();

    // Magic URL Form Handler
    const form = document.getElementById('magicURLForm') as HTMLFormElement;
    const errorMessage = document.getElementById('error-message');
    const successMessage = document.getElementById('success-message');

    if (form && errorMessage && successMessage) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            errorMessage.classList.add('hidden');
            successMessage.classList.add('hidden');
            
            try {
                const formData = new FormData(form);
                const email = formData.get('email') as string;

                await createMagicURLSession(email);
                successMessage.textContent = 'Magic link sent! Please check your email.';
                successMessage.classList.remove('hidden');
                form.reset();
            } catch (error) {
                errorMessage.textContent = error instanceof Error ? error.message : 'Failed to send magic link';
                errorMessage.classList.remove('hidden');
            }
        });
    }

</script>
