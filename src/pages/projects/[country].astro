---
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  // Fetch all projects from the 'projects' collection
  const projects = await getCollection('projects');

  // Extract unique countries from the projects
  const countries = Array.from(
    new Set(
      projects.flatMap((project) =>
        Array.isArray(project.data.properties.pCountry) ? project.data.properties.pCountry : [project.data.properties.pCountry]
      )
    )
  ).filter(Boolean); // Filter out undefined or null values

  // Generate paths for each country
  return countries.map((country) => ({
    params: { country },
  }));
}

// Fetch all projects for the current country
const { country } = Astro.params;
const projects = await getCollection('projects');

// Filter projects for the current country
const filteredProjects = projects.filter((project) =>
  Array.isArray(project.data.properties.pCountry)
    ? project.data.properties.pCountry.includes(country)
    : project.data.properties.pCountry === country
);
---

<html lang="en">
  <head>
    <title>Projects in {country}</title>
  </head>
  <body>
    <Header />
    <main>
      <h1>Projects in {country}</h1>
      <ul>
        {filteredProjects.map((project) => (
          <li>
            <a href={`/project/${project.data.properties.pSlug}`}>{project.data.properties.pTitle}</a>
          </li>
        ))}
      </ul>
    </main>
    <Footer />
  </body>
</html>