---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Login">
    <!-- Main Content -->
    <section class="min-h-screen lg:grid lg:grid-cols-2">
        <!-- Left Column: Hero & Info (Hidden on mobile, shows on lg+) -->
        <div class="hidden lg:flex lg:flex-col lg:justify-center px-8 xl:px-16 py-12" style="background-color: #1C2434;">
            <div class="max-w-xl">
                <h1 class="text-4xl xl:text-5xl font-extrabold text-white mb-6">
                    Welcome to Giveback Guide
                </h1>
                <p class="text-lg xl:text-xl text-white/80 mb-12">
                    Sign in to save projects and stays, track your impact journey, and discover meaningful travel experiences.
                </p>

                <!-- Benefits List -->
                <div class="space-y-6">
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(169, 143, 250, 0.2);">
                            <svg class="w-5 h-5" style="color: #A98FFA;" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM14 11a1 1 0 011 1v1h1a1 1 0 110 2h-1v1a1 1 0 11-2 0v-1h-1a1 1 0 110-2h1v-1a1 1 0 011-1z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-white font-semibold mb-1">Save & Organize</h3>
                            <p class="text-sm text-white/70">Create custom lists of projects and stays you want to visit</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(169, 143, 250, 0.2);">
                            <svg class="w-5 h-5" style="color: #A98FFA;" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-white font-semibold mb-1">Track Your Impact</h3>
                            <p class="text-sm text-white/70">Mark places as visited and see your positive travel footprint grow</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(169, 143, 250, 0.2);">
                            <svg class="w-5 h-5" style="color: #A98FFA;" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-white font-semibold mb-1">Discover Better Options</h3>
                            <p class="text-sm text-white/70">Get personalized recommendations for meaningful, impact-driven travel</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Form -->
        <div class="flex items-center justify-center px-4 py-12 lg:py-16">
            <div class="w-full max-w-md">
                <!-- Mobile Hero (Hidden on lg+) -->
                <div class="lg:hidden mb-8 text-center">
                    <h1 class="text-3xl sm:text-4xl font-extrabold mb-3" style="color: #1C2434;">
                        Welcome to Giveback Guide
                    </h1>
                    <p class="text-base sm:text-lg" style="color: #7E827E;">
                        Sign in to save projects and track your impact journey.
                    </p>
                </div>

                <!-- Login Card -->
                <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
            <div class="mb-6">
                <h2 class="text-2xl font-bold mb-2" style="color: #1C2434;">Get Started</h2>
                <p class="text-sm" style="color: #7E827E;">
                    Enter your email to sign in or create a new account. We'll then send you a magic link. No password required.
                </p>
            </div>

            <!-- Magic URL form -->
            <form id="magicURLForm" class="space-y-6">
                <div>
                    <label for="email" class="block mb-2 text-sm font-semibold" style="color: #1C2434;">Email address</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required 
                        class="w-full px-4 py-3 text-sm rounded-lg focus:outline-none focus:ring-2 transition-all duration-300"
                        style="border: 2px solid #E8EAE8; color: #1C2434; background: white; focus:ring-color: #A98FFA;"
                        placeholder="your@email.com"
                    >
                </div>
                
                <button 
                    type="submit" 
                    id="submit-button"
                    class="w-full py-3.5 text-sm font-semibold rounded-lg transition-all duration-300 hover:shadow-lg cursor-pointer disabled:opacity-60 disabled:cursor-not-allowed"
                    style="background-color: #1C2434; color: white;"
                >
                    <span id="button-text">Send Magic Link</span>
                    <span id="button-spinner" class="hidden">
                        <span class="inline-flex items-center gap-2">
                            <svg class="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Sending...
                        </span>
                    </span>
                </button>

                <!-- Success Message -->
                <div id="success-message" class="p-4 rounded-lg hidden" style="background-color: #F0FDF4; border: 1px solid #86EFAC;">
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 flex-shrink-0 mt-0.5" style="color: #16A34A;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <div>
                            <div class="text-sm font-semibold mb-1" style="color: #16A34A;">Magic link sent!</div>
                            <div class="text-xs" style="color: #15803D;">Check your email and click the link to continue. The link expires in 1 hour.</div>
                        </div>
                    </div>
                </div>

                <!-- Error Message -->
                <div id="error-message" class="p-4 rounded-lg hidden" style="background-color: #FEF2F2; border: 1px solid #FECACA;">
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 flex-shrink-0 mt-0.5" style="color: #DC2626;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                        <div class="text-sm" style="color: #DC2626;" id="error-text"></div>
                    </div>
                </div>
            </form>

            <!-- How it Works -->
            <div class="mt-8 pt-6 border-t" style="border-color: #E8EAE8;">
                <h3 class="text-xs font-semibold uppercase tracking-wide mb-3" style="color: #7E827E;">How it works</h3>
                <ul class="space-y-2">
                    <li class="flex items-start gap-2">
                        <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A98FFA;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-xs" style="color: #7E827E;">Enter your email and click "Send Magic Link"</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A98FFA;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-xs" style="color: #7E827E;">Check your inbox for an email from Giveback Guide</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <svg class="w-4 h-4 flex-shrink-0 mt-0.5" style="color: #A98FFA;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-xs" style="color: #7E827E;">Click the link to instantly sign in or create your account</span>
                    </li>
                </ul>
            </div>
                </div>

                <!-- Legal -->
                <p class="text-xs text-center mt-6" style="color: #A8ACA8;">
                    By continuing, you agree to our 
                    <a href="/terms/" class="underline hover:no-underline" style="color: #7353D4;">Terms of Service</a> and 
                    <a href="/privacy/" class="underline hover:no-underline" style="color: #7353D4;">Privacy Policy</a>.
                </p>
            </div>
        </div>
    </section>
</MainLayout>

<script>
    import { createMagicURLSession, getCurrentUser } from '../lib/auth';

    // If a user is already signed-in, send them to the dashboard instead of
    // allowing them to request a new magic link.
    (async () => {
        try {
            const user = await getCurrentUser();
            if (user) {
                window.location.href = '/account/dashboard';
                return;
            }
        } catch (e) {
            // ignore and let the page load
            console.debug('Login page auth check failed', e);
        }
    })();

    // Magic URL Form Handler
    const form = document.getElementById('magicURLForm') as HTMLFormElement;
    const errorMessage = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');
    const successMessage = document.getElementById('success-message');
    const submitButton = document.getElementById('submit-button') as HTMLButtonElement;
    const buttonText = document.getElementById('button-text');
    const buttonSpinner = document.getElementById('button-spinner');

    if (form && errorMessage && errorText && successMessage && submitButton && buttonText && buttonSpinner) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Hide previous messages
            errorMessage.classList.add('hidden');
            successMessage.classList.add('hidden');
            
            // Show loading state
            submitButton.disabled = true;
            buttonText.classList.add('hidden');
            buttonSpinner.classList.remove('hidden');
            
            try {
                const formData = new FormData(form);
                const email = formData.get('email') as string;

                const redirectTo = `${window.location.origin}/account/verify`;
                console.debug('Requesting magic link with redirectTo=', redirectTo);
                
                // Ensure minimum 500ms loading state for better UX
                const [res] = await Promise.all([
                    createMagicURLSession(email, redirectTo),
                    new Promise(resolve => setTimeout(resolve, 500))
                ]);
                
                successMessage.classList.remove('hidden');
                form.reset();
            } catch (error) {
                errorText.textContent = error instanceof Error ? error.message : 'Failed to send magic link. Please try again.';
                errorMessage.classList.remove('hidden');
            } finally {
                // Reset button state
                submitButton.disabled = false;
                buttonText.classList.remove('hidden');
                buttonSpinner.classList.add('hidden');
            }
        });
    }

</script>
