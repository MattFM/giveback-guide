---
import MainLayout from '../../layouts/MainLayout.astro';
---

<MainLayout title="Verifying...">
    <div class="min-h-screen flex items-center justify-center px-4 py-12" style="background-color: #F6F7F6;">
        <div class="w-full max-w-md">
            <div id="status" class="bg-white rounded-xl shadow-lg p-8 border border-gray-100 text-center">
                <!-- Loading State -->
                <div id="loading-state">
                    <div class="mb-6">
                        <div class="w-16 h-16 mx-auto rounded-full flex items-center justify-center" style="background-color: rgba(169, 143, 250, 0.1);">
                            <svg class="animate-spin w-8 h-8" style="color: #A98FFA;" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        </div>
                    </div>
                    <h2 class="text-2xl font-bold mb-2" style="color: #1C2434;">Verifying your link</h2>
                    <p class="text-sm" style="color: #7E827E;">Please wait while we sign you in...</p>
                </div>
            </div>
        </div>
    </div>
</MainLayout>

<script>
    import { updateMagicURLSession } from '../../lib/auth';

    const showSuccess = () => {
        const statusDiv = document.getElementById('status');
        if (statusDiv) {
            statusDiv.innerHTML = `
                <div class="text-center">
                    <div class="mb-6">
                        <div class="w-16 h-16 mx-auto rounded-full flex items-center justify-center" style="background-color: rgba(16, 185, 129, 0.1);">
                            <svg class="w-8 h-8" style="color: #10B981;" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        </div>
                    </div>
                    <h2 class="text-2xl font-bold mb-2" style="color: #1C2434;">Verified!</h2>
                    <p class="text-sm" style="color: #7E827E;">Taking you to your account...</p>
                </div>
            `;
        }
    };

    const showError = (message: string) => {
        const statusDiv = document.getElementById('status');
        if (statusDiv) {
            statusDiv.innerHTML = `
                <div class="text-center">
                    <div class="mb-6">
                        <div class="w-16 h-16 mx-auto rounded-full flex items-center justify-center" style="background-color: rgba(239, 68, 68, 0.1);">
                            <svg class="w-8 h-8" style="color: #EF4444;" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                        </div>
                    </div>
                    <h2 class="text-2xl font-bold mb-2" style="color: #1C2434;">Link Invalid</h2>
                    <p class="text-sm mb-4" style="color: #7E827E;">${message}</p>
                    <p class="text-xs" style="color: #A8ACA8;">Redirecting to login...</p>
                </div>
            `;
        }
    };

    const verifyLink = async () => {
        // Get URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const userId = urlParams.get('userId');
        const secret = urlParams.get('secret');

        try {
            // Verify the magic link
            if (typeof updateMagicURLSession !== 'function') {
                throw new Error('Authentication system not available');
            }

            if (userId && secret) {
                await updateMagicURLSession(userId, secret);
            } else {
                await updateMagicURLSession();
            }

            // Force a minimum delay of 1.5 seconds for better UX
            await new Promise(resolve => setTimeout(resolve, 1500));

            // Show success state
            showSuccess();

            // Redirect after brief pause
            setTimeout(() => {
                window.location.href = '/account/onboarding/';
            }, 800);

        } catch (error) {
            console.error('Magic link verification error:', error);
            
            // Force minimum delay even on error
            await new Promise(resolve => setTimeout(resolve, 1000));

            const errAny: any = error;
            const errMessage = errAny?.message || 'The magic link is invalid or has expired.';
            
            showError(errMessage);

            // Redirect to login after delay
            setTimeout(() => {
                window.location.href = '/login/';
            }, 3000);
        }
    };

    // Start verification
    verifyLink();
</script>
