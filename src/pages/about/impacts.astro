---
import MainLayout from "../../layouts/MainLayout.astro";
import { impactAreaData } from "../../utils/impactAreas";

const title = "Impact Areas - Giveback Guide";
const description = "Learn about the different ways projects and stays on Giveback Guide contribute to positive change for people, places, and the planet.";

// Organize impact areas by category
const environmentalAreas = [
  "Animal Welfare", "Wildlife Rehabilitation", "Sustainable Food Systems", 
  "Waste and Litter Reduction", "Marine Protection", "River Health", 
  "Reforestation", "Habitat Restoration"
];

const socialAreas = [
  "Women's Empowerment", "LGBTQ+ Inclusion", "Disability Inclusion and Empowerment",
  "Refugee and Migrant Inclusion", "Minority Heritage and Empowerment"
];

const communityAreas = [
  "Youth Development", "Education and Skills Training", "Community Development",
  "Poverty Alleviation", "Homelessness Support", "Cultural Heritage Preservation"
];
---

<MainLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-black text-white relative">
    <div class="py-20 lg:py-32 px-8">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-5xl lg:text-7xl font-black mb-8 leading-tight">
          Every Choice Creates <span class="bg-white text-black px-2 py-1 whitespace-nowrap">Real Impact</span>
        </h1>
        <p class="text-xl lg:text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed mb-12">
          19 impact areas covering everything from animal welfare to cultural preservation ‚Äî discover exactly how your travel choices make a difference for people, places, and the planet
        </p>
      </div>
    </div>
  </section>

  <!-- Environmental & Conservation Section -->
  <section class="bg-green-50 dark:bg-green-900/10">
    <div class="py-20 lg:py-24 px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <div class="text-5xl mb-4">üåç</div>
          <h2 class="text-4xl lg:text-5xl font-black text-gray-900 dark:text-white mb-6">
            Environmental & Conservation
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
            Protecting our planet's ecosystems, wildlife, and natural resources for future generations
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {environmentalAreas.map((areaName) => {
            const data = impactAreaData[areaName];
            return (
              <div class="bg-white border border-green-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-all duration-300 hover:border-green-400 dark:bg-gray-800 dark:border-green-700">
                <div class="text-center">
                  <div class="text-3xl font-black text-green-700 dark:text-green-400 mb-3">{data?.code}</div>
                  <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-3">
                    {areaName}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                    {data?.description}
                  </p>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </section>

  <!-- Social Justice & Inclusion Section -->
  <section class="bg-purple-50 dark:bg-purple-900/10">
    <div class="py-20 lg:py-24 px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <div class="text-5xl mb-4">ü§ù</div>
          <h2 class="text-4xl lg:text-5xl font-black text-gray-900 dark:text-white mb-6">
            Social Justice & Inclusion
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
            Creating equitable opportunities and safe spaces for marginalized communities
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {socialAreas.map((areaName) => {
            const data = impactAreaData[areaName];
            return (
              <div class="bg-white border border-purple-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-all duration-300 hover:border-purple-400 dark:bg-gray-800 dark:border-purple-700">
                <div class="text-center">
                  <div class="text-3xl font-black text-purple-700 dark:text-purple-400 mb-3">{data?.code}</div>
                  <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-3">
                    {areaName}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                    {data?.description}
                  </p>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </section>

  <!-- Community & Development Section -->
  <section class="bg-blue-50 dark:bg-blue-900/10">
    <div class="py-20 lg:py-24 px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <div class="text-5xl mb-4">üèòÔ∏è</div>
          <h2 class="text-4xl lg:text-5xl font-black text-gray-900 dark:text-white mb-6">
            Community & Development
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
            Strengthening local communities through education, economic empowerment, and cultural preservation
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {communityAreas.map((areaName) => {
            const data = impactAreaData[areaName];
            return (
              <div class="bg-white border border-blue-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-all duration-300 hover:border-blue-400 dark:bg-gray-800 dark:border-blue-700">
                <div class="text-center">
                  <div class="text-3xl font-black text-blue-700 dark:text-blue-400 mb-3">{data?.code}</div>
                  <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-3">
                    {areaName}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                    {data?.description}
                  </p>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </section>

  <!-- How We Determine Impact Areas -->
  <section class="bg-white dark:bg-gray-900">
    <div class="py-20 lg:py-32 px-8">
      <div class="max-w-6xl mx-auto text-center mb-20">
        <h2 class="text-4xl lg:text-6xl font-black mb-8 leading-tight text-gray-900 dark:text-white">
          How We Determine <span class="bg-black text-white px-2 py-1 dark:bg-white dark:text-black">Impact Areas</span>
        </h2>
        <p class="text-xl lg:text-2xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto leading-relaxed">
          Simple process, thorough review ‚Äî every project is carefully evaluated
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 max-w-6xl mx-auto">
        <div class="text-center">
          <div class="text-6xl font-black text-gray-900 dark:text-white mb-6 opacity-20">01</div>
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Direct Involvement</h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">Activities that directly contribute to the cause or issue</p>
        </div>
        
        <div class="text-center">
          <div class="text-6xl font-black text-gray-900 dark:text-white mb-6 opacity-20">02</div>
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Financial Support</h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">A portion of proceeds goes toward the impact area</p>
        </div>
        
        <div class="text-center">
          <div class="text-6xl font-black text-gray-900 dark:text-white mb-6 opacity-20">03</div>
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Educational Component</h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">Learning opportunities about the issue and its importance</p>
        </div>
        
        <div class="text-center">
          <div class="text-6xl font-black text-gray-900 dark:text-white mb-6 opacity-20">04</div>
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Community Partnership</h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">Working with local organizations in that field</p>
        </div>
      </div>
      
      <div class="text-center mt-16 max-w-3xl mx-auto">
        <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
          Many projects and stays contribute to <strong>multiple impact areas</strong>, giving you diverse ways to make a positive difference through your travels.
        </p>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="bg-black text-white">
    <div class="py-20 lg:py-32 px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl lg:text-6xl font-black mb-8 leading-tight">
          Ready to Make an <span class="bg-white text-black px-2 py-1">Impact?</span>
        </h2>
        <p class="text-xl lg:text-2xl text-gray-300 mb-12 leading-relaxed">
          Start exploring projects and stays that align with the causes you care about most
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a 
            href="/projects" 
            class="px-8 py-4 text-lg font-semibold text-black bg-white rounded-full hover:bg-gray-100 transition-all duration-300 whitespace-nowrap"
          >
            Browse All Projects
          </a>
          <a 
            href="/stays" 
            class="px-8 py-4 text-lg font-semibold text-white border-2 border-white rounded-full hover:bg-white hover:text-black transition-all duration-300 whitespace-nowrap"
          >
            Find Impact Stays
          </a>
        </div>
        
        <div class="mt-8 text-gray-400">
          <p>Or <a href="/projects" class="underline hover:text-white">search by specific impact area</a></p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>