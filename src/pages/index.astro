---
import MainLayout from "../layouts/MainLayout.astro";
import HomeHero from "../components/sections/HomeHero.astro";
import InfiniteScroll from "../components/ui/InfiniteScroll.astro";
import LatestProjects from "../components/sections/LatestProjects.astro";
import LatestStays from "../components/sections/LatestStays.astro";
import LatestPosts from "../components/sections/LatestPosts.astro";
import Button from "../components/ui/Button.astro";
import { SITE_TITLE } from "../consts";
---

<MainLayout
  title={`${SITE_TITLE} - Discover amazing ways to give back to the places you visit`}
  description="Giveback is a growing collection of animal sanctuaries, beach cleans, cultural exchanges, social impact projects, tours, tree planting, wellbeing experiences and more."
  headerVariant="transparent"
  headerTheme="dark"
>
  <HomeHero />
  <InfiniteScroll speed="normal" direction="left" />
  <main>
    <LatestProjects limit={6} />
    <LatestStays limit={6} />
    
    <!-- Why It Matters Section -->
    <section class="relative overflow-hidden" style="background-color: #1C2434;">
      <div class="py-20 lg:py-32 px-8 relative z-10">
        <div class="max-w-5xl mx-auto">
          <!-- Headline -->
          <h2 class="text-4xl sm:text-5xl lg:text-6xl font-black leading-tight mb-8 text-left text-white">
            Same Trip. Same Budget. <br class="hidden sm:block"/><span class="gradient-highlight">Completely Different Impact.</span>
          </h2>
          
          <!-- Body Text -->
          <p class="text-xl lg:text-2xl leading-relaxed mb-12 max-w-3xl text-left" style="color: #D1D4D1;">
            What if your morning coffee trained people with disabilities? Or your accommodation protected rescued elephants? Discover how the same things you'd do anyway can create real, measurable change in the communities you visit.
          </p>
          
          <!-- Stats Badges -->
          <div class="flex flex-wrap gap-4 mb-12 justify-start">
            <div class="inline-flex items-center px-5 py-3 backdrop-blur-md rounded-xl transition-all duration-300 hover:-translate-y-1" style="background-color: rgba(169, 143, 250, 0.12); border: 1px solid rgba(169, 143, 250, 0.25);">
              <span class="text-2xl font-bold mr-2" style="color: #C4B3FC;">300+</span>
              <span class="text-sm" style="color: #E8EAE8;">Projects</span>
            </div>
            <div class="inline-flex items-center px-5 py-3 backdrop-blur-md rounded-xl transition-all duration-300 hover:-translate-y-1" style="background-color: rgba(169, 143, 250, 0.12); border: 1px solid rgba(169, 143, 250, 0.25);">
              <span class="text-2xl font-bold mr-2" style="color: #C4B3FC;">60+</span>
              <span class="text-sm" style="color: #E8EAE8;">Countries</span>
            </div>
            <div class="inline-flex items-center px-5 py-3 backdrop-blur-md rounded-xl transition-all duration-300 hover:-translate-y-1" style="background-color: rgba(169, 143, 250, 0.12); border: 1px solid rgba(169, 143, 250, 0.25);">
              <span class="text-2xl font-bold mr-2" style="color: #C4B3FC;">19</span>
              <span class="text-sm" style="color: #E8EAE8;">Impact Areas</span>
            </div>
          </div>
          
          <!-- CTA -->
          <div class="flex flex-col sm:flex-row gap-4 items-start">
            <Button href="/why" variant="accent">
              <span>See How It Works</span>
              <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </Button>
            
            <Button href="/projects" variant="secondary">
              <span>Browse Projects</span>
              <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </Button>
          </div>
        </div>
      </div>
      
      <!-- Subtle background pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent"></div>
      </div>
    </section>
    
    <style>
      .gradient-highlight {
        background: linear-gradient(
          135deg,
          #DED5FD,
          #C4B3FC,
          #A98FFA,
          #C4B3FC,
          #DED5FD
        );
        background-size: 200% 200%;
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: gradientShift 4s ease infinite;
        font-weight: 900;
      }

      @keyframes gradientShift {
        0%, 100% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
      }
    </style>
    
    <LatestPosts limit={6} />
  </main>
</MainLayout>
