---
import { getCollection } from "astro:content";
import MainLayout from "../layouts/MainLayout.astro";
import HomeHero from "../components/HomeHero.astro";
import Search from "astro-pagefind/components/Search";
import LatestProjects from "../components/LatestProjects.astro";
---

<MainLayout title="Giveback">
  <HomeHero />
  <main>
    <section class="bg-white dark:bg-gray-900">
      <div class="py-4 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div
          class="p-6 mb-5 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700"
        >
          <div
            class="border border-gray-200 p-1 mb-2 rounded-sm inline-flex items-center gap-1"
          >
            <p class="text-xs font-light text-gray-400 dark:text-white">
              Advertising
            </p>
          </div>
          <a href="#">
            <h5
              class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
            >
              Ocean Bottle - Hydrate and help the ocean
            </h5>
          </a>
          <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
            We work with our three Plastic Collection partners to collect
            plastic on a global scale, in areas where plastic pollution is
            worse.
          </p>
          <a
            href="#"
            class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          >
            Read more
            <svg
              class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"></path>
            </svg>
          </a>
        </div>
        <Search
          id="search"
          className="pagefind-ui"
          uiOptions={{ showImages: true }}
        />
        <div
          class="max-w-screen-lg text-gray-500 sm:text-lg dark:text-gray-400"
        >
        </div>
      </div>
    </section>
	<LatestProjects limit={6} />
  </main>
</MainLayout>
