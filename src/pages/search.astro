---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/sections/Hero.astro";
import { SITE_TITLE } from "../consts";
---

<MainLayout 
  title={`Search ${SITE_TITLE}`}
  headerVariant="transparent"
  headerTheme="dark"
>
  <main>
    <!-- Hero Section -->
    <Hero
      title="Search"
      description="Find projects, stays and blog posts"
      background="color"
      backgroundValue="#1C2434"
      theme="dark"
      size="small"
      align="left"
    >
    </Hero>

    <section class="bg-white dark:bg-gray-900">
      <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">

        <!-- Search Input -->
        <div class="max-w-screen-md mx-auto mb-8">
          <form class="flex items-center" action="/search" method="get">
            <label for="search-input" class="sr-only">Search</label>
            <div class="relative w-full">
              <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
              </div>
              <input 
                type="text" 
                id="search-input" 
                name="q"
                class="bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 pr-16 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" 
                placeholder="Search for projects, posts, or stays..." 
                autocomplete="off"
              />
              <button 
                type="button" 
                id="clear-search" 
                class="absolute inset-y-0 right-0 flex items-center pr-3 text-sm font-medium text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition-colors duration-200 cursor-pointer hidden"
                aria-label="Clear search"
              >
                Clear
              </button>
            </div>
          </form>
          
          <!-- Desktop-only search instruction -->
          <div class="hidden md:flex justify-center items-center mt-2 text-sm text-gray-500 dark:text-gray-400">
            <span class="mr-2">Press</span>
            <kbd class="px-2 py-1.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">Enter</kbd>
            <span class="ml-2">to search</span>
          </div>
        </div>

        <!-- Filters and Status Section -->
        <div class="mb-6">
          <div id="filters-and-status" class="hidden">
            
            <!-- Responsive Layout: Side-by-side on all screen sizes -->
            <div class="flex justify-between items-center gap-4 mb-6">
              
              <!-- Status text: left side -->
              <div class="flex-1 text-left">
                <p id="status-text" class="text-sm font-normal text-gray-500 dark:text-gray-400">Enter a search term to get started</p>
              </div>

              <!-- Filters button: right side -->
              <div class="flex-shrink-0">
                <button 
                  type="button" 
                  id="filters-btn"
                  class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg border transition-colors duration-200 focus:ring-2 focus:ring-gray-300 dark:focus:ring-gray-600 text-gray-600 bg-white border-gray-300 hover:bg-gray-50 hover:border-gray-400 dark:text-gray-400 dark:bg-gray-800 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:hover:border-gray-500 cursor-pointer"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                  </svg>
                  Filters
                  <span id="total-filter-count" class="hidden ml-2 px-2 py-0.5 text-xs font-semibold rounded-full bg-gray-900 text-white dark:bg-gray-700"></span>
                </button>
              </div>
              
            </div>

            <!-- Filters Modal -->
            <div id="filters-modal" class="hidden fixed inset-0 z-[9999] overflow-y-auto" aria-labelledby="filters-modal-title" role="dialog" aria-modal="true">
              <!-- Backdrop overlay -->
              <div id="filters-modal-overlay" class="fixed inset-0 bg-black/30 backdrop-blur-md cursor-pointer" aria-hidden="true"></div>
              
              <!-- Modal container -->
              <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
                <!-- Modal panel -->
                <div id="filters-modal-panel" class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full relative z-10">
                  
                  <!-- Modal Header -->
                  <div class="bg-white dark:bg-gray-800 px-4 pt-5 pb-4 sm:p-6 sm:pb-4 border-b border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                      <h3 class="text-lg font-semibold text-gray-900 dark:text-white" id="filters-modal-title">
                        Filters
                      </h3>
                      <button 
                        type="button" 
                        id="close-filters-modal"
                        class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 cursor-pointer"
                        aria-label="Close filters"
                      >
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                      </button>
                    </div>
                  </div>

                  <!-- Modal Body -->
                  <div class="bg-white dark:bg-gray-800 px-4 pt-5 pb-4 sm:p-6 max-h-[60vh] overflow-y-auto">
                    
                    <!-- Content Type Filters -->
                    <div class="mb-8">
                      <h4 class="text-base font-bold text-gray-900 dark:text-white mb-3">Content Type</h4>
                      <div class="flex flex-wrap gap-2">
                        <button 
                          type="button" 
                          id="modal-filter-all" 
                          class="modal-content-filter px-4 py-2 text-sm font-medium rounded-lg border transition-colors duration-200 text-white bg-gray-900 border-gray-900 hover:bg-black dark:bg-gray-700 dark:border-gray-700 dark:hover:bg-gray-600 cursor-pointer whitespace-nowrap"
                          data-filter="all"
                          data-active="true"
                        >
                          All <span id="modal-count-all" class="ml-1 opacity-75"></span>
                        </button>
                        <button 
                          type="button" 
                          id="modal-filter-projects" 
                          class="modal-content-filter px-4 py-2 text-sm font-medium rounded-lg border transition-colors duration-200 text-gray-600 bg-white border-gray-300 hover:bg-gray-50 hover:border-gray-400 dark:text-gray-400 dark:bg-gray-800 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:hover:border-gray-500 cursor-pointer whitespace-nowrap"
                          data-filter="projects"
                          data-active="false"
                        >
                          Projects <span id="modal-count-projects" class="ml-1 opacity-75"></span>
                        </button>
                        <button 
                          type="button" 
                          id="modal-filter-stays" 
                          class="modal-content-filter px-4 py-2 text-sm font-medium rounded-lg border transition-colors duration-200 text-gray-600 bg-white border-gray-300 hover:bg-gray-50 hover:border-gray-400 dark:text-gray-400 dark:bg-gray-800 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:hover:border-gray-500 cursor-pointer whitespace-nowrap"
                          data-filter="stays"
                          data-active="false"
                        >
                          Stays <span id="modal-count-stays" class="ml-1 opacity-75"></span>
                        </button>
                        <button 
                          type="button" 
                          id="modal-filter-posts" 
                          class="modal-content-filter px-4 py-2 text-sm font-medium rounded-lg border transition-colors duration-200 text-gray-600 bg-white border-gray-300 hover:bg-gray-50 hover:border-gray-400 dark:text-gray-400 dark:bg-gray-800 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:hover:border-gray-500 cursor-pointer whitespace-nowrap"
                          data-filter="posts"
                          data-active="false"
                        >
                          Blog Posts <span id="modal-count-posts" class="ml-1 opacity-75"></span>
                        </button>
                      </div>
                    </div>

                    <!-- Impact Areas Filters -->
                    <div>
                      <h4 class="text-base font-bold text-gray-900 dark:text-white mb-2">Impact Areas</h4>
                      <p class="text-xs text-gray-500 dark:text-gray-400 mb-4">
                        Filter Projects and Stays by their impact focus.
                      </p>
              
              <!-- Environmental & Conservation -->
              <div class="mb-4">
                  <button 
                    type="button" 
                    class="impact-category-toggle flex items-center justify-between w-full text-left text-xs font-semibold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2 hover:text-gray-900 dark:hover:text-gray-100 cursor-pointer"
                    data-category="environmental"
                  >
                    <div class="flex items-center gap-2">
                      <input 
                        type="checkbox" 
                        class="category-select-all hidden w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 cursor-pointer" 
                        data-category="environmental"
                        onclick="event.stopPropagation()"
                      >
                      <span>Environmental & Conservation</span>
                    </div>
                    <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </button>
                  <div class="impact-category-content hidden space-y-2 pl-4" data-category="environmental">
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:focus:ring-gray-600 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600" data-impact="Animal Welfare">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Animal Welfare</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Wildlife Rehabilitation">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Wildlife Rehabilitation</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Sustainable Food Systems">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Sustainable Food Systems</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Waste and Litter Reduction">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Waste and Litter Reduction</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Marine Protection">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Marine Protection</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="River Health">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">River Health</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Reforestation">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Reforestation</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Habitat Restoration">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Habitat Restoration</span>
                    </label>
                  </div>
                </div>
                
                <!-- Social Justice & Inclusion -->
                <div class="mb-4">
                  <button 
                    type="button" 
                    class="impact-category-toggle flex items-center justify-between w-full text-left text-xs font-semibold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2 hover:text-gray-900 dark:hover:text-gray-100 cursor-pointer"
                    data-category="social"
                  >
                    <div class="flex items-center gap-2">
                      <input 
                        type="checkbox" 
                        class="category-select-all hidden w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 cursor-pointer" 
                        data-category="social"
                        onclick="event.stopPropagation()"
                      >
                      <span>Social Justice & Inclusion</span>
                    </div>
                    <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </button>
                  <div class="impact-category-content hidden space-y-2 pl-4" data-category="social">
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Women's Empowerment">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Women's Empowerment</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="LGBTQ+ Inclusion">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">LGBTQ+ Inclusion</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Disability Inclusion and Empowerment">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Disability Inclusion and Empowerment</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Refugee and Migrant Inclusion">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Refugee and Migrant Inclusion</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Minority Heritage and Empowerment">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Minority Heritage and Empowerment</span>
                    </label>
                  </div>
                </div>
                
                <!-- Community & Development -->
                <div class="mb-4">
                  <button 
                    type="button" 
                    class="impact-category-toggle flex items-center justify-between w-full text-left text-xs font-semibold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2 hover:text-gray-900 dark:hover:text-gray-100 cursor-pointer"
                    data-category="community"
                  >
                    <div class="flex items-center gap-2">
                      <input 
                        type="checkbox" 
                        class="category-select-all hidden w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 cursor-pointer" 
                        data-category="community"
                        onclick="event.stopPropagation()"
                      >
                      <span>Community & Development</span>
                    </div>
                    <svg class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </button>
                  <div class="impact-category-content hidden space-y-2 pl-4" data-category="community">
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Youth Development">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Youth Development</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Education and Skills Training">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Education and Skills Training</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Community Development">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Community Development</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Poverty Alleviation">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Poverty Alleviation</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Homelessness Support">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Homelessness Support</span>
                    </label>
                    <label class="flex items-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-1 rounded">
                      <input type="checkbox" class="impact-area-checkbox w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500 dark:bg-gray-700 dark:border-gray-600" data-impact="Cultural Heritage Preservation">
                      <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Cultural Heritage Preservation</span>
                    </label>
                  </div>
                </div>
              </div>
            </div>

                  <!-- Modal Footer -->
                  <div class="bg-gray-50 dark:bg-gray-900 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse gap-3">
                    <button 
                      type="button"
                      id="apply-filters-btn"
                      class="w-full inline-flex justify-center rounded-lg border border-transparent shadow-sm px-4 py-2 bg-gray-900 text-base font-medium text-white hover:bg-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 sm:ml-3 sm:w-auto sm:text-sm dark:bg-gray-700 dark:hover:bg-gray-600 cursor-pointer"
                    >
                      Apply Filters
                    </button>
                    <button 
                      type="button"
                      id="clear-all-filters-btn"
                      class="mt-3 w-full inline-flex justify-center rounded-lg border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 sm:mt-0 sm:w-auto sm:text-sm dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700 cursor-pointer"
                    >
                      Clear All
                    </button>
                  </div>

                </div>
              </div>
            </div>

          </div>
        </div>

        <!-- Search Results -->
        <div id="search-results" class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0">
          <!-- Results will be populated here -->
        </div>

        <!-- No Results Section -->
        <div id="no-results" class="hidden text-center py-12">
          <div class="max-w-md mx-auto">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <h3 class="mb-2 text-xl font-semibold text-gray-900 dark:text-white">No results found</h3>
            <p id="no-results-query" class="mb-6 text-gray-500 dark:text-gray-400">We couldn't find anything for your search.</p>
          </div>
        </div>

        <!-- Search Results -->
        <div id="search-results" class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0">
          <!-- Results will be populated here -->
        </div>

        <!-- No Results Section -->
        <div id="no-results" class="hidden text-center py-12">
          <div class="max-w-md mx-auto">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <h3 class="mb-2 text-xl font-semibold text-gray-900 dark:text-white">No results found</h3>
            <p id="no-results-query" class="mb-6 text-gray-500 dark:text-gray-400">We couldn't find anything for your search.</p>
            
            <!-- Additional instructions section - ready for Concierge service info -->
            <div id="no-results-instructions" class="space-y-4">
              <div class="p-4 bg-gray-50 dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
                <p class="text-sm text-gray-700 dark:text-gray-300 mb-3">
                  Can't find what you're looking for? Our human staff can help!
                </p>
                <a 
                  href="/concierge" 
                  class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-900 border border-transparent rounded-lg hover:bg-black focus:ring-4 focus:outline-none focus:ring-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-gray-600"
                >
                  Try our free Concierge service
                  <svg class="w-4 h-4 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
