---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import MainLayout from "./MainLayout.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, date, updatedDate, coverImage } = Astro.props;
---

<MainLayout title={title}>
  <main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900 antialiased">
    <div class="flex justify-between px-4 mx-auto max-w-screen-xl ">
        <article data-pagefind-body class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
            <header class="mb-4 lg:mb-6 not-format">
              <FormattedDate date={date} />
              {
                updatedDate && (
                  <div class="text-base text-gray-500 dark:text-gray-400">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">{title}</h1>
            </header>
        <div>
          {
            coverImage && (
              <img data-pagefind-meta="image[src]" class="rounded-xl" width={1020} height={510} src={coverImage} alt="" />
            )
          }
        </div>
        <div class="format">
          <slot />
        </div>
      </div>
    </section>
        </MainLayout>
