---
import { Image } from "astro:assets";
import Avatar from "../../assets/giveback-guide-avatar.svg";
import Button from "../ui/Button.astro";
import { SITE_TITLE } from "../../consts";
const today = new Date();
---

<footer class="p-4 sm:p-6" style="background-color: #F6F7F6;" role="contentinfo">
  <div class="mx-auto max-w-screen-xl">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0 max-w-xs">
        <a href="https://giveback.guide" class="flex items-center mb-4">
          <Image src={Avatar} class="w-22 h-22" alt="Giveback Guide" />
        </a>
        
        <!-- Newsletter CTA -->
        <div class="mt-4">
          <p class="text-sm font-semibold mb-3" style="color: #1C2434;">
            Stay updated with the latest projects
          </p>
          <form
            action="https://subscribe-api.matt-c4f.workers.dev/"
            method="POST"
            class="w-full"
          >
            <div class="flex gap-2">
              <div class="relative flex-1">
                <label for="footer-email" class="sr-only">Email address</label>
                <input
                  class="block py-2 px-3 w-full bg-white rounded-lg border transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-1"
                  style="color: #1C2434; border-color: #D1D4D1; --tw-ring-color: rgba(169, 143, 250, 0.3); font-size: 16px;"
                  placeholder="Your email"
                  type="email"
                  id="footer-email"
                  name="email"
                  required
                />
                <input
                  type="checkbox"
                  name="consent"
                  style="display:none"
                  tabindex="-1"
                  autocomplete="off"
                />
              </div>
              <Button type="submit" variant="primary" size="sm">
                Subscribe
              </Button>
            </div>
            <p class="mt-2 text-xs" style="color: #7E827E;">
              We care about your data. <a
                href="/privacy"
                class="hover:underline"
                style="color: #1C2434;"
                >Privacy Policy</a
              >
            </p>
          </form>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-8 sm:gap-10 md:gap-12 lg:gap-16 sm:grid-cols-3">
        <div>
          <h2
            class="mb-6 text-sm font-semibold uppercase"
            style="color: #1C2434;"
          >
            Get Involved
          </h2>
          <ul style="color: #7E827E;">
            <li class="mb-4">
              <a href="/why/" class="hover:underline">Better choices</a>
            </li>
            <li class="mb-4">
              <a href="/submit" class="hover:underline">Submit a project</a>
            </li>
            <li class="mb-4">
              <a href="/verify" class="hover:underline">Verify a project</a>
            </li>
            <li class="mb-4">
              <a href="/join" class="hover:underline">Join our community</a>
            </li>
            <li>
              <a href="/support" class="hover:underline">Support us</a>
            </li>
          </ul>
        </div>
        <div>
          <h2
            class="mb-6 text-sm font-semibold uppercase"
            style="color: #1C2434;"
          >
            About
          </h2>
          <ul style="color: #7E827E;">
            <li class="mb-4">
              <a href="/about/" class="hover:underline">About us</a>
            </li>
            <li class="mb-4">
              <a href="/contact/" class="hover:underline">Contact us</a>
            </li>
            <li class="mb-4">
              <a href="/changelog" class="hover:underline">Changelog</a>
            </li>
            <li class="mb-4">
              <a href="/about/impacts/" class="hover:underline">Impact Areas</a>
            </li>
            <li class="mb-4">
              <a href="/sustainability" class="hover:underline"
                >Sustainability</a
              >
            </li>
            <li>
              <a href="/about/advertising" class="hover:underline"
                >Advertising</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h2
            class="mb-6 text-sm font-semibold uppercase"
            style="color: #1C2434;"
          >
            Policies
          </h2>
          <ul style="color: #7E827E;">
            <li class="mb-4">
              <a href="/privacy" class="hover:underline">Privacy Policy</a>
            </li>
            <li class="mb-4">
              <a href="/terms" class="hover:underline">Terms of service</a>
            </li>
            <li class="mb-4">
              <a href="/about/ai-statement" class="hover:underline"
                >AI statement</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
    <hr class="my-6 sm:mx-auto lg:my-8" style="border-color: #D1D4D1;" />
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm sm:text-center" style="color: #7E827E;"
        >&copy; {today.getFullYear()} {SITE_TITLE}. All Rights Reserved.
      </span>
      <div class="flex mt-4 space-x-6 sm:justify-center sm:mt-0">
        <a
          href="https://www.instagram.com/giveback.guide"
          class="transition-all duration-300"
          style="color: #7E827E;"
          onmouseover="this.style.color='#1C2434'"
          onmouseout="this.style.color='#7E827E'"
          aria-label="Instagram"
        >
          <svg
            class="w-5 h-5"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            ><path
              fill-rule="evenodd"
              d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
              clip-rule="evenodd"></path></svg
          >
        </a>
        <a
          href="https://www.tiktok.com/@giveback.guide"
          class="transition-all duration-300"
          style="color: #7E827E;"
          onmouseover="this.style.color='#1C2434'"
          onmouseout="this.style.color='#7E827E'"
          aria-label="TikTok"
        >
          <svg
            class="w-6 h-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            ><path
              fill-rule="evenodd"
              d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3z"
              clip-rule="evenodd"></path></svg
          >
        </a>
      </div>
    </div>
  </div>
</footer>
