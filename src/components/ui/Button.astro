---
export interface Props {
  variant?: 'primary' | 'secondary' | 'accent' | 'outline' | 'ghost' | 'danger';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
  href?: string;
  class?: string;
  style?: string; // Allow inline styles for design system colors
  [key: string]: any; // Allow any other HTML attributes
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  disabled = false,
  fullWidth = false,
  href,
  class: className = '',
  style: inlineStyle = '',
  ...rest
} = Astro.props;

// Base styles - smooth transitions with cursor
// not-prose prevents @tailwindcss/typography from overriding button styles in blog posts
const baseStyles = 'not-prose inline-flex items-center justify-center gap-2 font-semibold rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed cursor-pointer whitespace-nowrap';

// Updated variants with good hover feedback (no rise animation)
const variants = {
  primary: 'text-white hover:opacity-90 hover:shadow-md focus:ring-gray-700', 
  secondary: 'border backdrop-blur-md hover:bg-white/10 hover:border-white/40 focus:ring-gray-300',
  accent: 'text-white hover:opacity-90 hover:shadow-md focus:ring-purple-500',
  outline: 'border backdrop-blur-sm hover:bg-black/5 hover:border-gray-400 focus:ring-gray-300',
  ghost: 'hover:bg-gray-100',
  danger: 'bg-red-600 text-white hover:bg-red-700 hover:shadow-md focus:ring-red-500',
};

const sizes = {
  sm: 'px-5 py-2.5 text-sm',
  md: 'px-8 py-4 text-base',
  lg: 'px-10 py-5 text-lg',
};

const widthClass = fullWidth ? 'w-full' : '';

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${widthClass} ${className}`.trim();

const Tag = href ? 'a' : 'button';

// Updated color logic with new hierarchy
const defaultPrimaryStyle = variant === 'primary' && !inlineStyle 
  ? 'background-color: #1C2434;' // Raisin Black
  : '';

const defaultSecondaryStyle = variant === 'secondary' && !inlineStyle
  ? 'background-color: rgba(246, 247, 246, 0.1); border: 1px solid rgba(246, 247, 246, 0.3); color: #F6F7F6;'
  : '';

const defaultAccentStyle = variant === 'accent' && !inlineStyle
  ? 'background-color: #A98FFA;' // Light Purple - for dark backgrounds
  : '';

const defaultOutlineStyle = variant === 'outline' && !inlineStyle
  ? 'border-color: #1C2434; color: #1C2434;'
  : '';

const finalStyle = inlineStyle || defaultPrimaryStyle || defaultSecondaryStyle || defaultAccentStyle || defaultOutlineStyle;
---

<Tag
  class={classes}
  type={!href ? type : undefined}
  disabled={disabled}
  href={href}
  style={finalStyle}
  {...rest}
>
  <slot />
</Tag>
