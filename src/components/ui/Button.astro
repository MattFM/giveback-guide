---
export interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'danger';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
  href?: string;
  class?: string;
  rounded?: 'default' | 'full'; // New: control border radius
  style?: string; // New: allow inline styles for design system colors
  [key: string]: any; // Allow any other HTML attributes
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  disabled = false,
  fullWidth = false,
  href,
  class: className = '',
  rounded = 'full',
  style: inlineStyle = '',
  ...rest
} = Astro.props;

// Enhanced base styles with better animations
const baseStyles = 'inline-flex items-center justify-center gap-2 font-semibold transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed whitespace-nowrap';

// New design system color palette
const variants = {
  primary: 'text-white hover:shadow-[0_8px_24px_rgba(169,143,250,0.3)] hover:-translate-y-0.5', // Tropical Indigo
  secondary: 'backdrop-blur-md hover:-translate-y-0.5', // Translucent
  outline: 'border backdrop-blur-sm hover:-translate-y-0.5',
  ghost: 'hover:bg-gray-100 hover:-translate-y-0.5',
  danger: 'bg-red-600 text-white hover:bg-red-700 hover:shadow-[0_8px_24px_rgba(220,38,38,0.3)] hover:-translate-y-0.5 focus:ring-red-500',
};

const sizes = {
  sm: 'px-5 py-2.5 text-sm',
  md: 'px-8 py-4 text-base',
  lg: 'px-10 py-5 text-lg',
};

const roundedStyles = {
  default: 'rounded-lg',
  full: 'rounded-full',
};

const widthClass = fullWidth ? 'w-full' : '';

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${roundedStyles[rounded]} ${widthClass} ${className}`.trim();

const Tag = href ? 'a' : 'button';

// Default inline styles for primary variant using new color palette
const defaultPrimaryStyle = variant === 'primary' && !inlineStyle 
  ? 'background-color: #A98FFA; color: #1C2434;' 
  : '';

const defaultSecondaryStyle = variant === 'secondary' && !inlineStyle
  ? 'background-color: rgba(246, 247, 246, 0.1); border: 1px solid rgba(246, 247, 246, 0.3); color: #F6F7F6;'
  : '';

const defaultOutlineStyle = variant === 'outline' && !inlineStyle
  ? 'border-color: #1C2434; color: #1C2434;'
  : '';

const finalStyle = inlineStyle || defaultPrimaryStyle || defaultSecondaryStyle || defaultOutlineStyle;
---

<Tag
  class={classes}
  type={!href ? type : undefined}
  disabled={disabled}
  href={href}
  style={finalStyle}
  {...rest}
>
  <slot />
</Tag>

<style>
  /* Enhanced hover effect for gap animation on buttons with icons */
  button:hover, a:hover {
    gap: 0.75rem;
  }
</style>
